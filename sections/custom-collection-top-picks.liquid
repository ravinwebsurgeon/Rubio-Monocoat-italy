{% comment %} {% assign images = collection.metafields.custom.top_picks_images.value %}
  {% assign titles = collection.metafields.custom.top_picks_titles.value %} {% endcomment %}

  {% assign descriptions = collection.metafields.custom.top_picks_desc.value %}
  {% assign product_list = collection.metafields.custom.top_picks_product.value %}
  {% assign heading = collection.metafields.custom.top_picks_heading.value %}

  {% if product_list != blank %}
<section class="top_picks_slider custom_categrysss">
  <div class="top-picks-header">
    <h2>
      {{ heading }}
    </h2>    
  </div>
  <div style="position:relative;">    
    <div class="top-silder-arrows">
      <div class="prev-item-btn">
        <button type="button" class="cert-prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/>
          </svg>
        </button>
      </div>
      <div class="next-item-btn">
        <button type="button" class="cert-next">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/>
          </svg>
        </button>
      </div>
    </div>
    <div class="top_picks_carousel">
    {% for product in product_list %}
      {% assign i = forloop.index0 %}
      <div class="top-picks-product-card">
        <div class="slider-product-image">
            <img src="{{ product.featured_image | img_url: 'master' }}" width="" height="" />
        </div>
        <div class="top-product-content">
          <h3>{{ product.title }}</h3>
          <p>{{ product.metafields.custom.collectionproduct_subtitle.value }}</p>
          <div class="ctificte-btn--pulsss">
            <div class="certificate-puls-btn">
              <button class="cert-plus" type="button" data-product-index="{{ i }}">+</button>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
  
  <!-- Product Detail Popup -->
  <div id="product-detail-popup" class="product-popup">
    <div class="popup-overlay"></div>
    <div class="popup-content">
      <button class="popup-close">&times;</button>
      <div class="popup-body">
        <div class="popup-image">
          <img id="popup-product-image" src="" alt="" />
        </div>
        <div class="popup-details">
          <h3 id="popup-product-title"></h3>
          <p id="popup-product-subtitle"></p>
          <div class="popup-actions">
            <button class="btn-view-product">View Product</button>
            <button class="ajax_Add_to_cart" data-variant-id>Addto Cart</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>
{% endif %}

