{% assign images = collection.metafields.custom.top_picks_images.value %}
{% assign titles = collection.metafields.custom.top_picks_titles.value %}
{% assign descriptions = collection.metafields.custom.top_picks_desc.value %}
{% assign product_list = collection.metafields.custom.top_picks_product.value %}
{% assign heading = collection.metafields.custom.top_picks_heading.value %}

{% if product_list != blank %}
<section class="top_picks_slider">
  <div class="top-picks-header">
    <h2>{{ heading }}</h2>
  </div>

  <div class="slider-wrapper">
    <button type="button" class="cert-prev side-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
        <path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/>
      </svg>
    </button>

    <div class="top_picks_carousel">
      {% for product in product_list %}
        {% assign i = forloop.index0 %}
        <div class="top-picks-product-card">
          <div class="certificates-img">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ titles[i] | escape }}">
            {% endif %}
            <div class="certificate-desc">
              <p>{{ descriptions[i] }}</p>
            </div>
          </div>
          <div class="certificate-all-content">
            <h3>{{ product.title }}</h3>
            <div class="ctificte-btn--pulsss">
              <div class="certificate-puls-btn">
                <button class="cert-plus" type="button">i</button>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <button type="button" class="cert-next side-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
        <path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/>
      </svg>
    </button>
  </div>
</section>
{% endif %}

<style>
.top_picks_slider {
  padding: 100px 30px;
  max-width: 1745px;
  margin: 0 auto;
  position: relative;
}
.top-picks-header {
  text-align: center;
  margin-bottom: 50px;
}
.top-picks-header h2 {
  font-weight: 700;
  font-size: 40px;
  line-height: 45px;
  margin: 0;
}
.slider-wrapper {
  position: relative;
}
.side-arrow {
  background: #fff;
  border: 1px solid #183029;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}
.side-arrow:hover {
  background: #183029;
}
.side-arrow:hover svg path {
  fill: #fff;
}
.cert-prev {
  left: -60px;
}
.cert-next {
  right: -60px;
}
.side-arrow svg {
  width: 20px;
  height: 20px;
  fill: #183029;
}

/* Slick card styles (same as your base) */
.top-picks-product-card {
  border-radius: 20px;
  text-align: center;
  margin: 0 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.certificates-img {
  background-color: #E1E9E4;
  position: relative;
  padding-bottom: 316px;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  overflow: hidden;
}
.certificates-img img {
  max-width: 277px;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: block;
  position: absolute;
  top: 0; bottom: 0; left: 0; right: 0;
  object-fit: contain;
  transition: opacity 0.3s ease;
}
.certificate-all-content {
  border: 1px solid #183029;
  border-top: 0;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  padding: 15px;
  display: flex;
  background-color: #183029;
  align-items: center;
  justify-content: space-between;
}
.certificate-all-content h3 {
  margin: 0;
  font-weight: 500;
  font-size: 18px;
  color: #fff;
}

/* Description reveal */
.certificate-desc {
  position: absolute;
  inset: 0;
  background: #183029;
  color: #fff;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  font-size: 14px;
  line-height: 22px;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.4s ease;
  border-radius: 20px 20px 0 0;
}
.top-picks-product-card.active .certificate-desc {
  opacity: 1;
  transform: translateY(0);
}
.top-picks-product-card.active img {
  opacity: 0;
}

@media(max-width: 991px) {
  .cert-prev { left: -30px; }
  .cert-next { right: -30px; }
  .side-arrow {
    width: 40px; height: 40px;
  }
}
@media(max-width: 767px) {
  .side-arrow {
    display: none !important;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  $('.top_picks_carousel').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    infinite: false,
    prevArrow: $('.cert-prev'),
    nextArrow: $('.cert-next'),
    responsive: [
      {
        breakpoint: 1200,
        settings: { slidesToShow: 3 }
      },
      {
        breakpoint: 991,
        settings: { slidesToShow: 2 }
      },
      {
        breakpoint: 767,
        settings: { slidesToShow: 1, dots: true, arrows: false }
      }
    ]
  });

  document.querySelectorAll(".cert-plus").forEach(btn => {
    btn.addEventListener("click", function() {
      const card = this.closest(".top-picks-product-card");
      card.classList.toggle("active");
      this.textContent = card.classList.contains("active") ? "Ã—" : "i";
    });
  });
});
</script>

{% schema %}
{
  "name": "Top Picks Slider",
  "presets": [{ "name": "Top Picks Slider" }]
}
{% endschema %}
