{% assign images = collection.metafields.custom.top_picks_images.value %}
{% assign titles = collection.metafields.custom.top_picks_titles.value %}
{% assign descriptions = collection.metafields.custom.top_picks_desc.value %}
{% assign product_list = collection.metafields.custom.top_picks_product.value %}
{% assign heading = collection.metafields.custom.top_picks_heading.value %}

{% if product_list != blank %}
<section class="top_picks_slider">
  <div class="top-picks-header">
    <h2>
      {{ heading }}
    </h2>
    <div class="certificates-arrows">
      <div class="prev-btn">
        <button type="button" class="cert-prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/>
          </svg>
        </button>
      </div>
      <div class="next-btn">
        <button type="button" class="cert-next">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="top_picks_carousel">
    {% for product in product_list %}
      {% assign i = forloop.index0 %}
      <div class="top-picks-product-card">
        <div class="certificates-img">
            <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ titles[i] | escape }}">
          <div class="certificate-desc">
            <p>{{ descriptions[i] }}</p>
          </div>
        </div>
        <div class="certificate-all-content">
          <h3>{{ product.title }}</h3>
          <div class="ctificte-btn--pulsss">
            <div class="certificate-puls-btn">
              <button class="cert-plus" type="button">i</button>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .top_picks_slider .certificate-all-content {
    border: 1px solid #183029;
    border-top: 0;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    padding: 15px;
    gap: 10px;
    justify-content: space-between;
    align-items: center;
    display:flex;
    background-color:#183029;
    position: relative;
    height:100%;
  }
  
  .top_picks_slider .ctificte-btn--pulsss {
    justify-content: end;
    display: flex;
    margin-top: 0;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    align-items: center;
    padding: 0 10px;
  }
  
  .top_picks_slider {
    padding: 100px 30px;
    max-width: 1745px;
    margin: 0 auto;
  }
  
  .top-picks-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50px;
  }
  
  .top-picks-header h2 {
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 40px;
    line-height: 45px;
    margin: 0;
  }
  
  .top_picks_slider .certificates-arrows button {
    background: transparent;
    border: 0;
    padding: 0;
  }
  
  .top_picks_slider .certificates-arrows button svg {
    width: 20px;
    height: 20px;
    display: block;
    cursor: pointer;
    fill: #000;
  }
  
  .top_picks_slider .certificates-arrows .prev-btn, 
  .top_picks_slider .certificates-arrows .next-btn {
    width: 40px;
    height: 40px;
    border: 1px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .top_picks_slider .certificates-arrows .prev-btn:hover, 
  .top_picks_slider .certificates-arrows .next-btn:hover {
    background-color: #183029;
    border-color: #183029;
  }
  
  .top_picks_slider .certificates-arrows .prev-btn:hover svg, 
  .top_picks_slider .certificates-arrows .next-btn:hover svg {
    fill: #fff;
  }
  
  .top_picks_slider .certificates-arrows {
    display: flex;
    gap: 10px;
  }
  
  .top_picks_slider .top-picks-product-card {
    border-radius: 20px;
    text-align: center;
    margin: 0 10px;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
  }
  
  .top-picks-product-card .certificates-img {
    background-color: #E1E9E4;
    position: relative;
    padding-bottom: 316px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    overflow: hidden;
  }
  
  .top-picks-product-card img {
    max-width: 277px;
    width: 100%;
    height: 100%;
    margin: 0 auto;
    display: block;
    position: absolute;
    top: 0; bottom: 0; left: 0; right: 0;
    object-fit: contain;
    transition: opacity 0.3s ease;
  }
  
  .top-picks-product-card h3 {
    margin: 0;
    font-family: Frutiger Neue LT W1G;
    font-weight: 500;
    font-size: 18px;
    line-height: normal;
    text-align: left;
    color:#fff;
    padding-right: 36px;
  }
  
  .top_picks_slider .certificate-puls-btn button.cert-plus {
    background: 0;
    border: 0;
    font-size: 18px;
    padding: 0;
    cursor: pointer;
    color:#fff;
    position: relative;
    z-index: 2;
  }
  
  .top_picks_slider .certificate-puls-btn {
    width: 24px;
    height: 24px;
    border: 1px solid #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .top_picks_slider .certificate-puls-btn:hover {
    background-color: #fff;
  }
  
  .top_picks_slider .certificate-puls-btn:hover .cert-plus {
    color: #183029;
  }

  /* Accordion effect */
  .certificate-desc {
    position: absolute;
    inset: 0;
    background: #183029;
    color: #fff;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: left;
    font-size: 14px;
    line-height: 22px;
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.4s ease;
    height: 96%;
    top: auto;
    overflow: auto;
    flex-direction: column;
    border-radius: 20px 20px 0 0;
    z-index: 1;
  }
  
  .top-picks-product-card.active .certificate-desc {
    opacity: 1;
    transform: translateY(0);
  }
  
  .top-picks-product-card.active img {
    opacity: 0;
  }

  /* Slick slider styles */
  .top_picks_carousel .slick-list {
    overflow: hidden;
  }
  
  .top_picks_carousel .slick-track {
    display: flex !important;
  }
  
  .top_picks_carousel .slick-slide {
    float: none;
    height: auto;
  }
  
  .top_picks_carousel .slick-slide > div {
    height: 100%;
  }
  
  /* Slick arrow customization */
  .top_picks_carousel .slick-arrow {
    position: static;
    transform: none;
  }
  
  .top_picks_carousel .slick-arrow:before {
    display: none;
  }
  
  .top_picks_carousel .slick-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .top_picks_carousel .slick-disabled button {
    cursor: not-allowed;
  }

  @media(max-width:1900px){
    .top_picks_slider {
      padding: 50px 30px;
    }
    .top-picks-header h2 {
      font-size: 28px;
      line-height: normal;
    }
    .top-picks-header {
      margin-bottom: 30px;
    }
  }
  
  @media(max-width:991px){
    .top_picks_slider {
        padding: 50px 20px;
    }
    .top_picks_slider .top-picks-product-card .certificates-img {
        padding-bottom: 190px;
    }
  }
  
  @media(max-width:767px){
    .top-picks-header h2 {
        font-size: 24px;
    }
    .top_picks_slider {
        padding: 30px 20px;
        position: relative;
    }
    .top_picks_slider .certificates-arrows {
        position: absolute;
        z-index: 1;
        top: 53%;
        transform: translateY(-40%);
        left: 18px;
        right: 18px;
        display: none;
    }
    .top_picks_slider .certificates-arrows button svg {
      width: 12px;
      height: 12px;
    }
    .top_picks_slider .certificates-arrows .prev-btn,  
    .top_picks_slider .certificates-arrows .next-btn {
      width: 24px;
      height: 24px;
      border: 1px solid rgba(0, 0, 0, 0.2);
    }
    .top_picks_slider  .certificates-arrows .next-btn{
      margin-left:auto;
    }
   
    .top_picks_slider .certificate-puls-btn {
      width: 24px;
      height: 24px;
    }
    .top_picks_slider .certificate-puls-btn button.cert-plus {
      font-size: 18px;
    }
    
    /* Show arrows on mobile when not using dots */
    .top_picks_slider .certificates-arrows.mobile-arrows {
      display: flex;
    }
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Check if jQuery and Slick are available
  function initializeSlider() {
    if (typeof jQuery === 'undefined' || typeof jQuery.fn.slick === 'undefined') {
      console.error('jQuery or Slick slider not loaded');
      // Fallback to vanilla JS if Slick not available
      initializeVanillaSlider();
      return;
    }
    
    const $carousel = $('.top_picks_carousel');
    
    if ($carousel.length) {
      $carousel.slick({
        slidesToShow: 4,
        slidesToScroll: 1,
        infinite: false,
        prevArrow: $('.cert-prev'),
        nextArrow: $('.cert-next'),
        responsive: [
          {
            breakpoint: 1200,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 991,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 767,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              dots: true,
              arrows: false,
              appendDots: $('.top_picks_slider')
            }
          }
        ]
      });
      
      console.log('Slick slider initialized successfully');
    }
  }

  // Vanilla JavaScript fallback slider
  function initializeVanillaSlider() {
    const carousel = document.querySelector('.top_picks_carousel');
    const prevBtn = document.querySelector('.cert-prev');
    const nextBtn = document.querySelector('.cert-next');
    const cards = document.querySelectorAll('.top-picks-product-card');
    
    if (!carousel || !prevBtn || !nextBtn) return;
    
    let currentIndex = 0;
    let cardsToShow = getCardsToShow();
    
    function getCardsToShow() {
      if (window.innerWidth <= 767) return 1;
      if (window.innerWidth <= 991) return 2;
      if (window.innerWidth <= 1200) return 3;
      return 4;
    }
    
    function updateCarousel() {
      const cardWidth = 100 / cardsToShow;
      const translateX = -currentIndex * cardWidth;
      carousel.style.transform = `translateX(${translateX}%)`;
      updateArrowStates();
    }
    
    function updateArrowStates() {
      const maxIndex = Math.max(0, cards.length - cardsToShow);
      
      prevBtn.style.opacity = currentIndex === 0 ? '0.5' : '1';
      prevBtn.disabled = currentIndex === 0;
      
      nextBtn.style.opacity = currentIndex >= maxIndex ? '0.5' : '1';
      nextBtn.disabled = currentIndex >= maxIndex;
    }
    
    function nextSlide() {
      const maxIndex = Math.max(0, cards.length - cardsToShow);
      if (currentIndex < maxIndex) {
        currentIndex++;
        updateCarousel();
      }
    }
    
    function prevSlide() {
      if (currentIndex > 0) {
        currentIndex--;
        updateCarousel();
      }
    }
    
    // Add CSS for vanilla slider
    const style = document.createElement('style');
    style.textContent = `
      .top_picks_carousel {
        display: flex;
        transition: transform 0.3s ease;
        width: 100%;
      }
      .top-picks-product-card {
        flex: 0 0 ${100/4}%;
        min-width: 0;
      }
      @media (max-width: 1200px) {
        .top-picks-product-card { flex: 0 0 ${100/3}%; }
      }
      @media (max-width: 991px) {
        .top-picks-product-card { flex: 0 0 50%; }
      }
      @media (max-width: 767px) {
        .top-picks-product-card { flex: 0 0 100%; }
      }
    `;
    document.head.appendChild(style);
    
    // Event listeners
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);
    window.addEventListener('resize', function() {
      cardsToShow = getCardsToShow();
      currentIndex = Math.min(currentIndex, Math.max(0, cards.length - cardsToShow));
      updateCarousel();
    });
    
    // Initialize
    updateCarousel();
    console.log('Vanilla slider initialized');
  }

  // Accordion toggle functionality
  function initializeAccordion() {
    document.querySelectorAll(".cert-plus").forEach(btn => {
      btn.addEventListener("click", function(e) {
        e.stopPropagation();
        const card = this.closest(".top-picks-product-card");
        const isActive = card.classList.contains("active");
        
        // Close all other accordions
        document.querySelectorAll(".top-picks-product-card.active").forEach(activeCard => {
          if (activeCard !== card) {
            activeCard.classList.remove("active");
            activeCard.querySelector(".cert-plus").textContent = "i";
          }
        });
        
        // Toggle current accordion
        card.classList.toggle("active");
        this.textContent = card.classList.contains("active") ? "Ã—" : "i";
      });
    });
    
    // Close accordion when clicking outside
    document.addEventListener("click", function() {
      document.querySelectorAll(".top-picks-product-card.active").forEach(card => {
        card.classList.remove("active");
        card.querySelector(".cert-plus").textContent = "i";
      });
    });
  }

  // Initialize everything
  function initializeAll() {
    initializeSlider();
    initializeAccordion();
  }

  // Wait for DOM to be fully ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeAll);
  } else {
    initializeAll();
  }
});
</script>
{% endif %}

