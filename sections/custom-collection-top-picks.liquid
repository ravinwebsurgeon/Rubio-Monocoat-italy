<script>
document.addEventListener("DOMContentLoaded", function() {
  // Store product data for popup
  const productData = [
    {% for product in product_list %}
      {% assign i = forloop.index0 %}
      {
        image: "{{ product.featured_image | img_url: 'master' }}",
        title: "{{ product.title | escape }}",
        subtitle: "{{ product.metafields.custom.collectionproduct_subtitle.value | escape }}",
        description: "{{ descriptions[i] | escape }}",
        url: "{{ product.url }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ];

  // Init Slick
  $('.top_picks_carousel').slick({
    slidesToShow: 5,
    slidesToScroll: 1,
    infinite: false,
    prevArrow: $('.cert-prev'),
    nextArrow: $('.cert-next'),
    responsive: [
      {
        breakpoint: 1200,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 767,
        settings: {
          slidesToShow: 1,
          dots: true,
          arrows: false
        }
      }
    ]
  });

  // Popup functionality
  const popup = document.getElementById('product-detail-popup');
  const popupImage = document.getElementById('popup-product-image');
  const popupTitle = document.getElementById('popup-product-title');
  const popupSubtitle = document.getElementById('popup-product-subtitle');
  const popupDescription = document.getElementById('popup-product-description');
  const viewProductBtn = document.querySelector('.btn-view-product');
  let currentProductIndex = 0;
  let currentProductUrl = '';

  // Open popup when plus button is clicked
  document.querySelectorAll(".cert-plus").forEach(btn => {
    btn.addEventListener("click", function() {
      const productIndex = parseInt(this.getAttribute('data-product-index'));
      currentProductIndex = productIndex;
      
      // Update button to show minus
      this.textContent = "âˆ’";
      this.classList.add('active');
      // Show popup with product details
      showProductPopup(productIndex);
    });
  });

  // Close popup
  document.querySelector('.popup-close').addEventListener('click', closePopup);
  document.querySelector('.popup-overlay').addEventListener('click', closePopup);

  // View product button
  viewProductBtn.addEventListener('click', function() {
    window.location.href = currentProductUrl;
  });

  function showProductPopup(index) {
    const product = productData[index];
    
    popupImage.src = product.image;
    popupImage.alt = product.title;
    popupTitle.textContent = product.title;
    popupSubtitle.textContent = product.subtitle;
    currentProductUrl = product.url;
    
    popup.style.display = 'block';
    document.body.style.overflow = 'hidden';
  }

  function closePopup() {
    popup.style.display = 'none';
    document.body.style.overflow = 'auto';
    
    // Reset all plus buttons
    document.querySelectorAll(".cert-plus").forEach(btn => {
      btn.textContent = "+";
      btn.classList.remove('active');
    });
  }

  // Close popup with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closePopup();
    }
  });
});
</script>

