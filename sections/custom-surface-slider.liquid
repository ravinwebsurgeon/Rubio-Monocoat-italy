{% assign source_page = pages[section.settings.source_page] %}
{% assign slider_links = source_page.metafields.custom.surface_slider_urls.value %}
{% assign slider_titles = source_page.metafields.custom.surface_slider_text.value %}
{% assign slider_images = source_page.metafields.custom.surface_slider.value %}

<section class="surface-slider-section">
  <div class="surface-slider-wrapper container">
    <div class="surface-slider-header">
      <h2 class="surface-slider-heading">{{ section.settings.main_heading }}</h2>
      <div class="surface-slider-nav">
        <button class="slider-btn prev-slide" aria-label="Previous Slide">‹</button>
        <button class="slider-btn next-slide" aria-label="Next Slide">›</button>
      </div>
    </div>

    <div class="surface-slider-track">
      {% for image in slider_images %}
        {% assign title = slider_titles[forloop.index0] %}
        {% assign link = slider_links[forloop.index0] %}

        <div class="surface-slide">
          <a href="{{ link }}" class="surface-slide-card">
            {% if image %}
              <div class="surface-slide-image">
                <img src="{{ image | img_url: '600x400' }}" alt="{{ title | escape }}">
              </div>
            {% endif %}
            {% if title %}
              <p class="surface-slide-title">{{ title }}</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<script>
document.addEventListener("DOMContentLoaded", function() {
  if ($('.surface-slider-track').length) {
    $('.surface-slider-track').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      infinite: false,
      arrows: true,
      appendArrows: $('.surface-slider-nav'),
      prevArrow: `<button type="button" class="slider-btn prev-slide" aria-label="Previous Slide">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slider-btn next-slide" aria-label="Next Slide">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>`,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 768, settings: { slidesToShow: 1 } }
      ]
    });
  }
});
</script>

{% schema %}
{
  "name": "Surface Slider",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Oiling other surfaces?"
    },
    {
    "type": "page",
    "id": "source_page",
    "label": "Select Page for Images"
    }
  ],

  "presets": [
    {
      "name": "Surface Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

