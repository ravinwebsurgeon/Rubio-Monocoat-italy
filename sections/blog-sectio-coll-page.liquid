<section class="blog-slider-section">
  <div class="blog-slider-container">
    <div class="blog-slider-inner">
      {% for article in blogs.news.articles %}
        <div class="blog-card">
          <div class="blog-card-image">
            {% if article.image %}
              <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}">
            {% endif %}
          </div>
          <div class="blog-card-content">
            <h3>{{ article.title }}</h3>
            <a href="{{ article.url }}" class="blog-card-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="custom-arrows"></div>
  </div>
</section>

<style>
.blog-slider-section { max-width: 1745px; margin: 0 auto; padding: 50px 20px; }
.blog-slider-inner { display: flex; gap: 20px; }
.blog-card {
  width: 825px;
  height: 600px;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  position: relative;
}
.blog-card-image { width: 100%; height: 400px; overflow: hidden; }
.blog-card-image img { width: 100%; height: 100%; object-fit: cover; display: block; }
.blog-card-content {
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.blog-card-content h3 { font-size: 24px; margin: 0; flex: 1; }
.blog-card-arrow {
  width: 40px;
  height: 40px;
  background: #183029;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15px;
  flex-shrink: 0;
}
.blog-card-arrow svg { width: 20px; height: 20px; stroke: #fff; }
.custom-arrows { display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px; }

/* Responsive */
@media(max-width: 1200px) { .blog-card { width: 600px; } }
@media(max-width: 768px) { 
  .blog-card { width: 100%; height: auto; }
  .blog-card-image { height: 300px; }
  .blog-card-content h3 { font-size: 18px; }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  if ($('.blog-slider-inner').length) {
    $('.blog-slider-inner').slick({
      slidesToShow: 2,
      slidesToScroll: 1,
      infinite: false,
      arrows: true,
      appendArrows: $('.custom-arrows'),
      prevArrow: `<button type="button" class="slick-prev">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slick-next">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>`,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 1 } },
        { breakpoint: 768, settings: { slidesToShow: 1 } }
      ]
    });
  }
});
</script>
