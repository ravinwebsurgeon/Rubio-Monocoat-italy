<div class="custom-banner-main-container">
    <div class="custom-banner-image-wrap">
        <img src="{{ section.settings.banner_img | img_url : "master" }}" width="100%" height="100%">
    </div>
    <div class="custom-banner-content">
        <h1 class="cstm-banner-heading">{{ section.settings.banner_text }}</h1>
    </div>
</div>
{% schema %}
{
"name": "custom banner 2",
"settings": [
    {
    "type": "image_picker",
    "id": "banner_img",
    "label": "Banner-image"
    },
    {
    "type": "text",
    "id": "banner_text",
    "label": "banner heading"
    }
],
"presets": [
    {
    "name": "Banner image 2"
    }
]
}
{% endschema %}

{% style %}
  .custom-banner-main-container {
  position: relative;
  width: 100%;
  height: 400px;
  overflow: hidden;
}

.custom-banner-image-wrap {
  width: 100%;
  height: 100%;
}

.custom-banner-image-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* ensures image fills area nicely */
  display: block;
}

.custom-banner-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #fff;
  z-index: 2;
  width: 100%;
  padding: 0 20px;
}

.cstm-banner-heading {
  font-size: 48px;
  font-weight: 700;
  margin: 0;
  line-height: 1.2;
}

/* âœ… Responsive tweak */
@media (max-width: 768px) {
  .custom-banner-main-container {
    height: 280px;
  }

  .cstm-banner-heading {
    font-size: 28px;
  }
}

{% endstyle %}