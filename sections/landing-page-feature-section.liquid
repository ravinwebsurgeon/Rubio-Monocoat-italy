
<section class="product-features-section landing__feature__section" id="product-info">
    <!-- Left column -->
    <div class="features-wrapper landing_feature_wrapper">
        <div class="landing_feature_content">
            {% if section.settings.heading != blank %}
                <h2 class="section-heading">{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.content != blank %}
                <p>{{ section.settings.content }}</p>
            {% endif %}
            <ul class="product-features left-col landing_product_features">
            {% for block in section.blocks %}
                <li>
                    <div class="feature__list__data">
                        {% if block.settings.icon != blank %}
                            <img src="{{ block.settings.icon | img_url:'small'}}"/ >
                        {% endif %}
                        <div class="text__content">
                            <p>{{ block.settings.text }}</p>
                            <p class="below__text">{{ block.settings.sub-text}}</p>
                        </div>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
        <!-- Right image -->
        {% if section.settings.image != blank %}
        <div class="feature-image landing_feature_image">
            <img src="{{ section.settings.image | image_url: width: 700 }}"/>
        </div>
        {% endif %}
  </div>
</section> 
<style>
    ul.product-features.left-col.landing_product_features{gap:0;}
</style>
{% schema %}
{
  "name": "Feature Section",
  "settings": [
    {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
    },
    {
        "type": "image_picker",
        "id":"image",
        "label":"Image"
    },
    {
        "type": "text",
        "id":"heading",
        "label":"Heading"
    },
    {
        "type": "richtext",
        "id":"content",
        "label":"Description"
    }
  ],
  "blocks": [
    {
        "type": "content",
        "name":"Content",
        "settings": [
            {
                "type": "image_picker",
                "id": "icon",
                "label": "icon"
            },
            {
                "type": "text",
                "id":"text",
                "label": "Text"
            },
            {
                "type": "text",
                "id":"sub-text",
                "label": "Sub-Text"
            }
        ]
    }
   ],
  "presets": [
    {
      "name": "Feature Section",
      "category": "page"
    }
  ]
}
{% endschema %}
