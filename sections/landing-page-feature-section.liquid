
<section class="product-features-section" id="product-info">


  <div class="features-wrapper">
    <!-- Left column -->
    {% if section.settings.heading != blank %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <ul class="product-features left-col">
    {% for block in section.blocks %}
        <li>
          {% if section.settings.icon != blank %}
        <span class="mobile-only-icon">
          {{ section.settings.icon }}
        </span>
      {% endif %}
          <strong>{{ titles[i] }}</strong>
          {% if descriptions[i] %}
            <p>{{ descriptions[i] }}</p>
          {% endif %}
        </li>
    {% endfor %}
    </ul>

    <!-- Center image -->
    {% if section.settings.image != blank %}
      <div class="feature-image">
        <img src="{{ section.settings.image | image_url: width: 600 }}"/>
      </div>
    {% endif %}

  </div>
</section> 
{% schema %}
{
  "name": "Feature Section",
  "settings": [
    {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
    },
    {
        "type": "image_picker",
        "id":"image",
        "label":"Image"
    },
    {
        "type": "text",
        "id":"heading",
        "label":"Heading"
    },
    {
        "type": "richtext",
        "id":"content",
        "label":"Description"
    }
  ],
  "blocks": [
    {
        "type": "content",
        "name":"Content",
        "settings": [
            {
                "type": "image_picker",
                "id": "icon",
                "label": "icon"
            },
            {
                "type": "text",
                "id":"text",
                "label": "Text"
            },
            {
                "type": "text",
                "id":"sub-text",
                "label": "Sub-Text"
            }
        ]
    }
   ],
  "presets": [
    {
      "name": "Feature Section",
      "category": "page"
    }
  ]
}
{% endschema %}
