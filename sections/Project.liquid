<div class="cust-project">
<div class="page-width">
<div class="cust-pro-wrap">
<h3 class="heading-pr">{{ section.settings.heading }}</h3>
<div class="main-pro-wrap">
<div class="pro-first">
<div class="Interio">
<img src="{{ section.settings.img1 | img_url:" " }}">
<div class="inter-btn" id="interior">Interior</div>
</div>
<div class="exterior">
    <img src="{{ section.settings.img2 | img_url:" " }}">
    <div class="exter-btn" id="exterior">Exterior</div>
</div>
    </div>
<div class="pro-second">
<h3 class="heading-pr">{{ section.settings.heading2 }}</h3>
<ul class="tabs">
    {% for block in section.blocks %}
      <li data-tab="menu{{ forloop.index }}">{{ block.settings.tab }}</li>
    {% endfor %}
  </ul>

  {% for block in section.blocks %}
    <div class="tab-content" id="menu{{ forloop.index }}">
      <div>{{ block.settings.tab-content }}</div>
    </div>
  {% endfor %}
</div>
    </div>
    </div>
    </div>
    </div>
{% schema %}
{
  "name": "Project",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Choose your project:"
    },
    {
    "type": "image_picker",
    "id": "img1",
    "label": "Interior Image"
    },
     {
    "type": "image_picker",
    "id": "img2",
    "label": "Exterior Image"
    },
     {
      "type": "text",
      "id": "heading2",
      "label": "Main Heading",
      "default": "Choose your species:"
    },
   
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Tabs",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "tab",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "tab-content",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Project",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<script>
  $(document).ready(function() {
   
    $(".tab-content:first").addClass("active");
    $(".tabs li:first").addClass("active");

    $(".tabs li").click(function() {
      var tabId = $(this).data('tab');
     
      $(".tabs li").removeClass("active");
      $(".tab-content").removeClass("active");
   
      $(this).addClass("active");
      $("#" + tabId).addClass("active");
    });
  });
</script>
<style>
    .pro-first {
    display: flex;
    width: 100%;
    gap: 20;
    gap: 50px;
}

.Interio {
    width: 50%;
    display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: center;
    align-items: center;
}

.exterior {
    width: 50%;
     display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: center;
    align-items: center;
}

.Interio img {
    width: 100%;
}

.exterior img {
    width: 100%;
}
.inter-btn {
    border-radius: 50px;
    border: 1 px solid;
    border: 1px solid;
    padding: 13px 37px 14px 37px;
    text-align: center;
    width: 160px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.exter-btn {
    border-radius: 50px;
    border: 1 px solid;
    border: 1px solid;
    padding: 13px 37px 14px 37px;
    text-align: center;
    width: 160px;
    display: flex;
    justify-content: center;
    align-items: center;
}
h3.heading-pr {
    text-align: center;
    font-size: 40px;
    font-style: bold;
    /* line-height: 100%; */
    font-weight: 700;
}
.pro-second {
    background-color: #F5F5F5;
    height: 350px;
    border-radius: 20px;
}
{% comment %} tabs {% endcomment %}
 .tabs {
      display: flex;
      list-style-type: none;
      padding: 0;
      margin: 0;
    }
    
    .tabs li {
      margin-right: 20px;
      cursor: pointer;
      padding: 10px 20px;
      background-color: #f0f0f0;
      border: 1px solid #ccc;
      border-radius: 5px 5px 0 0;
    }

    .tabs li.active {
      background-color:#7ac74f;
      color: white;
    }

    .tab-content {
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 0 0 5px 5px;
      display: none;
    }

    .tab-content.active {
      display: block;
    }
</style>

