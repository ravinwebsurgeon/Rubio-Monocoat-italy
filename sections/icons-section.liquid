{% comment %}
Section: Four Containers with Icon and Text
{% endcomment %}
<div class="four-containers_outer">
<div class="four-containers" data-aos="fade-up">
  {% for block in section.blocks %}
    <div class="container-item">
      <div class="icon-part">
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | img_url: '64x64' }}" alt="Icon">
        {% endif %}
      </div>
      <div class="text-part">
        <h3>{{ block.settings.heading }}</h3>
        <div class="available-and-text">
          <span>{{  block.settings.subhead }}</span>
        <p>{{ block.settings.subtext }}</p>
        </div>
        <p>{{ block.settings.extra_text }}</p>
      </div>
    </div>
  {% endfor %}
</div>
</div>
<style>

  .four-containers_outer .available-and-text {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 5px 0 15px;
}

.four-containers_outer .available-and-text p {
    margin: 0;
}

.four-containers_outer .available-and-text span {
    margin-right: 5px;
}

.four-containers {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}
.container-item {
  display: flex;
  align-items: center;
  gap: 15px;
}
.icon-part img {
  max-width: 64px;
  height: auto;
}
.text-part h3 {
  margin: 0;
  font-size: 18px;
}
.text-part p {
  margin: 4px 0;
  font-size: 14px;
}
</style>

{% schema %}
{
  "name": "icons section",
  "settings": [],
  "blocks": [
    {
      "type": "container",
      "name": "Container",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Sample Heading"
        },
        {
          "type": "text",
          "id": "subhead",
          "label": "Sub head"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Sub Text",
          "default": "This is subtext"
        },
        {
          "type": "text",
          "id": "extra_text",
          "label": "Extra Text",
          "default": "Additional details here"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "icons section",
      "category": "Custom",
      "blocks": [
        { "type": "container" },
        { "type": "container" },
        { "type": "container" },
        { "type": "container" }
      ]
    }
  ]
}
{% endschema %}
