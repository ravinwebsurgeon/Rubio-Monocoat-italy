{% assign show_desktop = section.settings.show_on_desktop %}
{% assign show_mobile = section.settings.show_on_mobile %}

{% if show_desktop or show_mobile %}
  <div class="four-containers_outer
    {% if show_desktop %}
      {% if show_mobile == false %} desktop-only {% endif %}
    {% endif %}
    {% if show_mobile %}
      {% if show_desktop == false %} mobile-only {% endif %}
    {% endif %}">
    
    <div class="four-containers">
      {% for block in section.blocks %}
        <div class="container-item {{ block.settings.class }}">
          <div class="icon-part">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '64x64' }}" alt="Icon">
            {% endif %}
          </div>
          <div class="text-part">
            <h3>{{ block.settings.heading }}</h3>
            <div class="available-and-text">
              <span>{{ block.settings.subhead }}</span>
              <p>{{ block.settings.subtext }}</p>
            </div>
            <p>{{ block.settings.extra_text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}




<style>

  .four-containers_outer .first-container-sec .available-and-text {
    display: flex;
    {% comment %} justify-content: center; {% endcomment %}
    align-items: center;
    margin: 5px 0 15px;
    color: #000000b2 !important;
}

.four-containers_outer .first-container-sec .available-and-text p, .four-containers_outer .first-container-sec .available-and-text p a {
    margin: 0;
        color: #000000b2 !important;
        text-decoration: none;
}

.four-containers_outer .first-container-sec .available-and-text span {
    margin-right: 5px;
    font-size: 16px;
    line-height: 10px;
    color: #000000b2 !important;
}

.four-containers {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}
.container-item {
  display: flex;
  align-items: center;
  gap: 15px;
}
.icon-part img {
  max-width: 64px;
  height: auto;
}
.text-part h3 {
  margin: 0;
  font-size: 18px;
}
.text-part p {
  margin: 4px 0;
  font-size: 14px;
}

/* Default: show on both if no special class */
.four-containers_outer {
  display: block;
}

/* Desktop only */
.desktop-only {
  display: block;
}
@media screen and (max-width: 767px) {
  .desktop-only {
    display: none !important;
  }
}

/* Mobile only */
.mobile-only {
  display: none;
}
@media screen and (max-width: 767px) {
  .mobile-only {
    display: block !important;
  }
}



</style>

{% schema %}
{
  "name": "icons section",
  "settings": [
     {
      "type": "checkbox",
      "id": "show_on_desktop",
      "label": "Show on Desktop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "Show on Mobile",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "container",
      "name": "Container",
      "settings": [
        {
          "type": "text",
          "id": "class",
          "label": "Section Class"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Sample Heading"
        },
        {
          "type": "text",
          "id": "subhead",
          "label": "Sub head"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Sub Text",
          "default": "This is subtext"
        },
        {
          "type": "text",
          "id": "extra_text",
          "label": "Extra Text",
          "default": "Additional details here"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "icons section",
      "category": "Custom",
      "blocks": [
        { "type": "container" },
        { "type": "container" },
        { "type": "container" },
        { "type": "container" }
      ]
    }
  ]
}
{% endschema %}
