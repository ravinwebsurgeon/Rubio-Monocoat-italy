{% assign products = collection.metafields.custom.compare_products.value %}
{% assign heading = collection.metafields.custom.compare_products_heading.value %}
{% assign des_headings = collection.metafields.custom.compare_product_des_heading.value %}
{% assign des_purpose_raw = collection.metafields.custom.compare_product_des_purpose.value %}
{% assign des_suitable_raw = collection.metafields.custom.compare_product_des_suitable.value %}
{% assign des_benefits_raw = collection.metafields.custom.compare_product_des_benefits.value %}
{% assign des_moment_raw = collection.metafields.custom.compare_product_des_moment.value %}

{% if des_purpose_raw[0] != nil %}
  {% assign des_purpose = des_purpose_raw %}
{% else %}
  {% assign des_purpose = des_purpose_raw | split: ',' %}
{% endif %}

{% if des_suitable_raw[0] != nil %}
  {% assign des_suitable = des_suitable_raw %}
{% else %}
  {% assign des_suitable = des_suitable_raw | split: ',' %}
{% endif %}

{% if des_benefits_raw[0] != nil %}
  {% assign des_benefits = des_benefits_raw %}
{% else %}
  {% assign des_benefits = des_benefits_raw | split: ',' %}
{% endif %}

{% if des_moment_raw[0] != nil %}
  {% assign des_moment = des_moment_raw %}
{% else %}
  {% assign des_moment = des_moment_raw | split: ',' %}
{% endif %}

{% assign max_rows = des_purpose.size %}
{% if des_suitable.size > max_rows %}
  {% assign max_rows = des_suitable.size %}
{% endif %}
{% if des_benefits.size > max_rows %}
  {% assign max_rows = des_benefits.size %}
{% endif %}
{% if des_moment.size > max_rows %}
  {% assign max_rows = des_moment.size %}
{% endif %}
{% if products !=blank and des_purpose_raw != blank %}
<div class="comapre_products_section_main">
  <div class="comapre_products_section">
      <div class="compare_products_data">
        <div class="compare_products_heading">
          <h2>{{ heading }}</h2>
        </div>
        
      </div>
      <div class="compare-table-wrapper">
        <table class="compare-table vertical-layout">
          <tbody>
            <tr>
              <th></th>
              {% for product in products %}
              <td>
                <div class="compare_product">
                  <div class="product_data">
                    <div class="product_media_content">
                      <a href="{{ product.url }}">
                        <img src="{{ product.featured_image | img_url: "small" }}" />
                      </a>
                    </div>
                    <div class="product_title">
                      <p>{{ product.title }}</p>
                    </div>
                  </div>
                </div>
              </td>
              {% endfor %}
            </tr>
            {% if des_purpose != blank %}
            <tr>
              <th>{{ des_headings[0] }}</th>
              {% for item in des_purpose %}
                <td> <div class="compare-purpose-cell">{{ item | strip }}</div></td>
              {% endfor %}
            </tr>
           {% endif %}
           {% if des_suitable != blank %}
            <tr>
              <th>{{ des_headings[1] }}</th>
              {% for item in des_suitable %}
                <td> <div class="compare-suitable-cell">{{ item | strip }}</div> </td>
              {% endfor %}
            </tr>
            {% endif %}
           {% if des_benefits != blank %}
            <tr>
              <th>{{ des_headings[2] }}</th>
              {% for item in des_benefits %}
                <td> <div class="compare-benefits-cell">{{ item | strip }}</div> </td>
              {% endfor %}
            </tr>
            {% endif %}
            {% if des_moment != blank %}
            <tr>
              <th>{{ des_headings[3] }}</th>
              {% for item in des_moment %}
                <td><div class="compare-cell">{{ item | strip }}</div></td>
              {% endfor %}
            </tr>
            {% endif %}
          </tbody>
        </table>  
      </div>
  </div>
</div>
{% endif %}

<style>
.compare_products_heading{
  text-align:center;
}
.compare_products_heading h2 {
    font-size: 24px;
    font-weight: 700;
    font-family: Frutiger Neue LT W1G;
    margin: 0 0 30px;
    line-height: normal;
    letter-spacing: 0;
}

.comapre_products_section_main {
    background-color: #f5f5f5;
    padding: 70px 20px;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    text-align:center;
    font-family: Frutiger Neue LT W1G;
}

.comapre_products_section_main .comapre_products_section {
    background-color: #fff;
    border-radius: 20px;
    max-width: 1700px;
    margin: 0 auto;
    padding: 50px;
}
.compare_products{
  display:flex;
  justify-content:center;
  align-items:center;
  gap:20px;
}
.compare-table-wrapper {
  overflow-x: auto;
  margin-top: 30px;
}
.compare-table {
  width: 100%;
  border-collapse: collapse;
  font-family: inherit;
  text-align: center;
  font-family: Frutiger Neue LT W1G;
  color:#000;
}
.compare-table th {
  font-weight: 600;
  padding: 14px 10px;
  border-bottom: 1px solid #eee;
  color:#000;
  width:165px;
}
.compare-purpose-cell {
    line-height: normal;
}
.compare-table td {
  padding: 14px 10px;
  border-bottom: 1px solid #eee;
  vertical-align: top;
    color:#000;
}
.compare-table td .product_media_content img {
    display: block;
    margin: 0 auto;
}
.compare-table tr:last-child td,.compare-table tr:last-child th,.compare-table tr:first-child td,.compare-table tr:first-child th {
  border-bottom: none;
}
.compare-table td .product_media_content img {
    display: block;
    margin: 0 auto;
}
.compare-table td .product_title p {
    font-weight: 700;
    margin-top:0;
    font-family: Frutiger Neue LT W1G;
}

.compare-table td .product_media_content a {
    display: inline-flex;
}


@media (max-width: 1736px) {
  .comapre_products_section_main {
      padding: 50px 20px;
  }
}
@media (max-width: 1279px) {
  .comapre_products_section_main .comapre_products_section {
      padding: 25px 15px;
  }
}
@media (max-width: 991px) {
 .compare_products_heading h2 {
      font-size: 18px;
      margin-bottom: 15px;
  }
  .compare-table {
    width: 1024px;
 }
 .compare-table-wrapper {
    -ms-scroll-snap-type: x mandatory;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    overflow-x: scroll;
    margin-top: 15px;
}
}
@media (max-width: 767px) {
  .compare-table th, .compare-table td {
    padding: 10px;
    font-size: 14px;
  }
  
}

</style>

{% schema %}
{
  "name": "Compare Product Section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Latest from the blog" },
  ],
  "presets": [
    { "name": "Compare Product Section", "category": "collection" }
  ]
}
{% endschema %}