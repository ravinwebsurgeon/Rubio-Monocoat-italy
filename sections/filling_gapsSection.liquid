            },
            {
                "type": "product",
                "id": "add_product",
                "label": "Product"
            },
            {
                "type": "video",
                "id": "background_video",
                "label": "Video",
            },
            {
                "type": "checkbox",
                "id": "autoplay",
                "label": "Autoplay video",
                "default": true
            },
            {
