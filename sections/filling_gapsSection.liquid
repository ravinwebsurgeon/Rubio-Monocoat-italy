                "default": true
            }
        ],
        "blocks":[
            {
                "type": "text",
                "name": "Select Products",
                "settings": [
                    {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                    },
                ]
            }
        ],
         "presets": [
            {
            "name": "Filling Gap Section",
            "category": "collection"
            }
        ]
    }
{% endschema %}