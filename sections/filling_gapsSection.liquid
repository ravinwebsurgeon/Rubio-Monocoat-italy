<div class="filling_gap_section">
    <div class="filling_gap">
        <div class="media_section">
            <div class="custom_image">
                <img src="{{ section.settings.image | img_url }}" />
                <div class="content_section">
                    <p class="heading">{{ section.settings.heading }}</p>
                    <p class="subheading">{{ section.settings.subheading }}</p>
                </div>
            </div>
            
        </div>
        <div class="selected_product_section">

        </div>
    </div>
</div>
<style>
    .filling_gap_section{display:none;}
    .filling_gap{display:flex;}
</style>
{% schema %}
    {
        "name":"Filling Gap Section",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Image Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ],
        "blocks":[
            {
                "type": "text",
                "name": "Select Products",
                "settings": [
                    {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                    },
                ]
            }
        ],
         "presets": [
            {
            "name": "Filling Gap Section",
            "category": "collection"
            }
        ]
    }
{% endschema %}