<div class="filling_gap_section">
    <div class="filling_gap">
        <div class="media_section">
            <div class="custom_image">
                <img src="{{ section.settings.image | img_url }}" />
                <div class="content_section">
                    <p class="heading">{{ section.settings.heading }}</p>
                    <p class="subheading">{{ section.settings.subheading }}</p>
                </div>
            </div>
            
        </div>
        <div class="selected_product_section">
            <div class="product_head"><p>{{ section.settings.main_heading }}</p></div>
            <div class="product-data">
                {% for block in section.blocks %}
                    {% assign product = block.settings.product %}
                    {% if product %}
                        <div class="product-block">
                        <a href="{{ product.url }}">
                            <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
                        </a>
                        <div class="product_title_price">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.price | money }}</p>
                        </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<style>
    .filling_gap_section{display:none;background: #F5F5F5;padding:50px 0px;}
    .filling_gap{display:flex;}
    .custom_image img{position:relative;}
    .content_section{background:black;color:#fff;border-radius:5px;position:absolute;}
    .content_section .subheading{font-size:14px;text-transform:capitalize;margin-top:-3%;}
    .content_section p{margin:0;padding:0px 10px;}
    {% comment %} .selected_product_section{width:60%} {% endcomment %}
    .media_section{width:40%}
    .selected_product_section .product_head p{font-size:20px;font-weight:600;margin:0;}
    .product_title_price{display:flex;}
    .product-block{background:#fff;width:auto;justify-content:space-between;}
    .product-data{display:flex;flex-wrap:wrap;}
</style>
{% schema %}
    {
        "name":"Filling Gap Section",
        "settings": [
            {
                "type": "text",
                "id": "main_heading",
                "label": "Main Heading"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Image Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ],
        "blocks":[
            {
                "type": "text",
                "name": "Select Products",
                "settings": [
                    {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                    },
                ]
            }
        ],
         "presets": [
            {
            "name": "Filling Gap Section",
            "category": "collection"
            }
        ]
    }
{% endschema %}