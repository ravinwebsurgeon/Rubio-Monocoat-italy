<div class="filling_gap_section">
    <div class="filling_gap">
        <div class="media_section">
            <div class="custom_image">
                <img src="{{ section.settings.image | img_url }}" width=300 height=300/>
                <div class="content_section">
                    <p class="heading">{{ section.settings.heading }}</p>
                    <p class="subheading">{{ section.settings.subheading }}</p>
                </div>
            </div>
        </div>
        <div class="selected_product_section">
            <div class="product_head"><p>{{ section.settings.main_heading }}</p></div>
            <div class="product-data">
                {% assign product = section.settings.add_product %}
                {% if product %}
                    <div class="product-block">
                        <a href="{{ product.url }}">
                            {% if product.featured_image %}
                            <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
                            {% endif %}
                        </a>
                        <div class="product_title_price">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.price | money_with_currency }}</p>
                        </div>
                    <div class='pro_subheading'><span>{{ section.settings.subheading }}</span></div>
                    <div class="pro_quantity">
                         <select id="myDropdown" name="myDropdown">
                            <option value="option1">20ml</option>
                            <option value="option2">40ml</option>
                            <option value="option3">60ml</option>
                        </select>
                    </div>
                    <div class="pro_buttons">
                        <button class="more_info">More Info</button>
                        <button class="add_to_cart">Add To cart</button>
                    </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
<div class="filling_gap_next">
<div class="video_section">
    {% if section.settings.background_video %}
    {{ section.settings.background_video }}
  {% endif %}
</div>
    <div class="block-products">
            <p class="p-head">Preparatory Cleaners</p>
            <div class="product-data">
                {% for block in section.blocks %}
                    {% assign product = block.settings.product %}
                    {% if product %}
                        <div class="product-block">
                        <a href="{{ product.url }}">
                            <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
                        </a>
                        <div class="product_title_price">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.price | money }}</p>
                        </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
    </div>
</div>

</div>

<style>
    h3 , p {margin:0;}
    .filling_gap_section{background: #F5F5F5;padding:50px 0px;}
    .filling_gap_next{display:flex;}
    .filling_gap{display:flex;width:95%;margin:auto;}
    .custom_image{padding-left:18%;}
    .custom_image img{position:relative;border-radius:10px;}
    .content_section{background:black;color:#fff;border-radius:10px;position:absolute;margin-top:-3%;}
    .content_section .subheading{font-size:12px;text-transform:capitalize;}
    .content_section p{margin:0;padding:0px 10px;}
    {% comment %} .selected_product_section{width:60%} {% endcomment %}
    .media_section, .video_section{width:34%}
    .selected_product_section .product_head p, .filling_gap_next p.p-head{font-size:20px;font-weight:600;margin:0;}
    .product_title_price{display:flex;justify-content:space-between;padding:0px 15px;}
    .product-block{background:#fff;width:auto;margin:11px;padding:4px;border-radius:10px;}
    .product-data{display:flex;flex-wrap:wrap;}
    .product-block img{width:247px;}
    .pro_subheading{font-size:15px;text-align:center;}
    .pro_buttons{margin:10px 0px;display: flex;align-items: center;justify-content: space-between;}
    .pro_buttons .more_info{background:black;}
    .pro_buttons .add_to_cart{background:#F79E1B;}
    .pro_buttons button{color:white;border:none;padding:10px;border-radius:33px;font-size:14px;}
    .pro_quantity{width: 95%;margin:5px auto;}
    .pro_quantity select{width: 100%;padding: 8px;border-radius: 19px;}
</style>
{% schema %}
    {
        "name":"Filling Gap Section",
        "settings": [
            {
                "type": "text",
                "id": "main_heading",
                "label": "Main Heading"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Image Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "product",
                "id": "add_product",
                "label": "Product"
            },
            {
                "type": "video",
                "id": "background_video",
                "label": "Video",
            },
            {
                "type": "checkbox",
                "id": "autoplay",
                "label": "Autoplay video",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "loop",
                "label": "Loop video",
                "default": true
            }
        ],
        "blocks":[
            {
                "type": "text",
                "name": "Select Products",
                "settings": [
                    {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                    },
                ]
            }
        ],
         "presets": [
            {
            "name": "Filling Gap Section",
            "category": "collection"
            }
        ]
    }
{% endschema %}