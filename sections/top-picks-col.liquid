<section class="custom-certificates-slider">
  <div class="custom-certificates-header">
    <h2>{{ section.settings.section_heading }}</h2>
    <div class="custom-certificates-arrows">
      <div class="prev-btn">
        <button type="button" class="custom-cert-prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/>
          </svg>
        </button>
      </div>
      <div class="next-btn">
        <button type="button" class="custom-cert-next">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
            <path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="custom-certificates-carousel">
    {% for block in section.blocks %}
    <div class="custom-certificate-card" {{ block.shopify_attributes }}>
      <div class="custom-certificates-img">
        {% if block.settings.certificate_image %}
          <img src="{{ block.settings.certificate_image | img_url:'master' }}" alt="{{ block.settings.certificate_title | escape }}">
        {% endif %}
        <div class="custom-certificate-desc">
          <p>{{ block.settings.certificate_description }}</p>
        </div>
      </div>
      <div class="custom-certificate-all-content">
        <div class="custom-cert-info">
          <h3>{{ block.settings.certificate_title }}</h3>
          <span class="custom-cert-subtitle">{{ block.settings.certificate_subtitle }}</span>
        </div>
        <div class="custom-certificate-puls-btn">
          <button class="custom-cert-plus" type="button">+</button>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<style>
.custom-certificates-slider {
  padding: 100px 30px;
  max-width: 1745px;
  margin: 0 auto;
}
.custom-certificates-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}
.custom-certificates-header h2 {
  font-family: Frutiger Neue LT W1G;
  font-weight: 700;
  font-size: 40px;
  line-height: 45px;
  margin: 0;
}
.custom-certificates-arrows {
  display: flex;
  gap: 10px;
}
.custom-certificates-arrows button {
  background: transparent;
  border: 0;
  padding: 0;
  cursor: pointer;
}
.custom-certificates-arrows button svg {
  width: 20px;
  height: 20px;
  display: block;
}
.custom-certificates-arrows .prev-btn,
.custom-certificates-arrows .next-btn {
  width: 40px;
  height: 40px;
  border: 1px solid #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.custom-certificate-card {
  border-radius: 20px;
  text-align: center;
  margin: 0 10px;
  overflow: hidden;
  position: relative;
  width: 320px;
  height: 420px;
  background: #183029;
  padding: 22px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.custom-certificates-img {
  background-color: #E1E9E4;
  position: relative;
  border-radius: 20px;
  flex: 1;
  overflow: hidden;
}
.custom-certificate-card img {
  max-width: 100%;
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
  margin: 0 auto;
  transition: opacity 0.3s ease;
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
}

.custom-certificate-all-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15px;
  position: relative;
}
.custom-cert-info {
  display: flex;
  flex-direction: column;
  text-align: left;
  color: #fff;
}
.custom-cert-info h3 {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
}
.custom-cert-subtitle {
  font-size: 14px;
  opacity: 0.8;
}

.custom-certificate-puls-btn {
  width: 28px;
  height: 28px;
  border: 1px solid #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.custom-cert-plus {
  background: none;
  border: none;
  font-size: 18px;
  color: #fff;
  cursor: pointer;
}

/* Accordion effect */
.custom-certificate-desc {
  position: absolute;
  inset: 0;
  background: #183029;
  color: #fff;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  font-size: 14px;
  line-height: 22px;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.4s ease;
  border-radius: 20px;
}
.custom-certificate-card.active .custom-certificate-desc {
  opacity: 1;
  transform: translateY(0);
}
.custom-certificate-card.active img {
  opacity: 0;
}

@media(max-width:991px){
  .custom-certificate-card { width: 280px; height: auto; }
}
@media(max-width:767px){
  .custom-certificates-header h2 { font-size: 24px; }
  .custom-certificates-arrows button svg { width: 12px; height: 12px; }
  .custom-certificates-arrows .prev-btn,
  .custom-certificates-arrows .next-btn { width: 24px; height: 24px; border: 1px solid rgba(0,0,0,0.2); }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function(){
  $('.custom-certificates-carousel').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    infinite: false,
    prevArrow: $('.custom-cert-prev'),
    nextArrow: $('.custom-cert-next'),
    responsive: [
      { breakpoint: 1200, settings: { slidesToShow: 3 }},
      { breakpoint: 768, settings: { slidesToShow: 2 }},
      { breakpoint: 480, settings: { slidesToShow: 1 }}
    ]
  });

  document.querySelectorAll(".custom-cert-plus").forEach(btn => {
    btn.addEventListener("click", function(){
      const card = this.closest(".custom-certificate-card");
      card.classList.toggle("active");
      this.textContent = card.classList.contains("active") ? "Ã—" : "+";
    });
  });
});
</script>

{% schema %}
{
  "name": "top picks Slider",
  "settings": [
    { "type": "text", "id": "section_heading", "label": "Section Heading", "default": "International product certificates" }
  ],
  "blocks": [
    {
      "type": "certificate",
      "name": "Certificate",
      "settings": [
        { "type": "image_picker", "id": "certificate_image", "label": "Certificate Image" },
        { "type": "text", "id": "certificate_title", "label": "Certificate Title", "default": "Certificate name" },
        { "type": "text", "id": "certificate_subtitle", "label": "Certificate Subtitle", "default": "Subtitle here" },
        { "type": "textarea", "id": "certificate_description", "label": "Certificate Description", "default": "Details about the certificate." }
      ]
    }
  ],
  "presets": [ { "name": "Custom Certificates Slider" } ]
}
{% endschema %}
