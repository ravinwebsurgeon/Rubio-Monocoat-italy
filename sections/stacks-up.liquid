
<div class="stacks-up-table-main">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="stacks-up-header">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{section.settings.subheading }}</p>
        </div>
    {% endif %}
    <div class="table-content">
        
    </div>
</div>
{%schema %}
{
  "name": "Stacks-up Table",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Table Heading",
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Table Subheading",
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "column_title",
          "label": "Column Title"
        }
      ]
    },
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Feature"
        },
        {
          "type": "text",
          "id": "values",
          "label": "Values (comma-separated)",
          "info": "Enter values for each column, separated by commas"
        }
      ]
    }
  ],
  "max_blocks": 50,
  "presets": [
    {
      "name": "Stacks-up Table",
      "category": "Page"
    }
  ]
}
{% endschema %}