{% schema %}
{
  "name": "Image Blocks with Button",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Section Heading",
      "default": "Our Featured Categories"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Blocks with Button",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="image-button-section">
  <div class="page-width">
    {% if section.settings.main_heading != blank %}
      <h2>{{ section.settings.main_heading }}</h2>
    {% endif %}

    <div class="image-blocks">
      {% for block in section.blocks %}
        <div class="image-block" {{ block.shopify_attributes }}>
          {% if block.settings.block_image %}
            <div class="image-container">
              <img src="{{ block.settings.block_image | img_url: 'master' }}" alt="Block Image" loading="lazy" width="" height="">
              {% if block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="image-button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.image-button-section {
  padding: 60px 0;
  text-align: center;
}
.image-button-section h2 {
  line-height: 22px;
  letter-spacing: normal;
  font-family: Frutiger Neue LT W1G;
  font-weight: 600;
  font-size: 28px;
  margin: 0 0 30px;
  color: #000;
  text-align: left;
}
.image-button-section .page-width {
  max-width: 1760px;
  padding: 0 30px;
}
.image-button-section .image-blocks {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
}
.image-button-section .image-container {
  position: relative;
  overflow: hidden;
  border-radius: 20px;
  padding-top: 90%;
  display: flex;
  justify-content: center;
}
.image-button-section .image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  border-radius: 20px;
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.image-button-section .image-container:hover img {
  transform: scale(1.05);
}
.image-button-section .image-button {
    position: absolute;
    bottom: 25px;
    text-decoration: none;    
    transition: background-color 0.3s ease;
    z-index: 1;
    font-size: 14px;
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    line-height: normal;
    text-align: center;
    color: #000;
    background-color: #fff;
    padding: 10px 34px;
    border-radius: 50px;
    margin: 0 auto;
}
.image-button-section .image-container:after {
    content: "";
    background-color: rgba(0,0,0,0.1);
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    border-radius: 20px;
}
</style>
