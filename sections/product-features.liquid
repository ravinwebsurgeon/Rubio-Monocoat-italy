{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "header",
      "content": "Feature Icons"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "SVG Code"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Product Features",
      "category": "Product"
    }
  ]
}
{% endschema %}

<div class="product-features">
  {% for block in section.blocks %}
    <div class="feature-item">
      <div class="feature-icon">
        {{ block.settings.icon_svg }}
      </div>
      <div class="feature-text">
        {{ block.settings.text }}
      </div>
    </div>
  {% endfor %}
</div>

<style>
.product-features {
  display: flex;
  justify-content: center;
  align-items: stretch;
  gap: 20px;
  margin-top: 30px;
  flex-wrap: wrap;
}

.feature-item {
  flex: 1 1 140px;
  max-width: 160px;
  background: #f9f9f9;
  border-radius: 10px;
  padding: 20px 10px;
  text-align: center;
  transition: 0.3s ease;
  cursor: pointer;
}

.feature-item:hover {
  border: 2px solid #0073e6;
  background: #fff;
}

.feature-icon svg {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
  stroke: #0a3325;
}

.feature-text {
  font-size: 13px;
  font-weight: 500;
  color: #0a3325;
  line-height: 1.3;
  text-transform: uppercase;
}
</style>
