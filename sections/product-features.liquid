<div class="product-features">
  {% for i in (1..5) %}
    {% assign svg_key = "feature_svg" | append: i %}
    {% assign text_key = "feature_text" | append: i %}
    
    {% assign feature_svg = product.metafields.custom[svg_key] %}
    {% assign feature_text = product.metafields.custom[text_key] %}
    
    {% if feature_svg or feature_text %}
      <div class="feature-item">
        <div class="feature-icon">
          {{ feature_svg }}
        </div>
        <div class="feature-text">
          {{ feature_text }}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "header",
      "content": "Features from product metafields"
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "category": "Product"
    }
  ]
}
{% endschema %}





<style>
.product-features {
  display: flex;
  justify-content: center;
  align-items: stretch;
  gap: 20px;
  margin-top: 30px;
  flex-wrap: wrap;
}

.feature-item {
  flex: 1 1 140px;
  max-width: 160px;
  background: #f9f9f9;
  border-radius: 10px;
  padding: 20px 10px;
  text-align: center;
  transition: 0.3s ease;
  cursor: pointer;
}

.feature-item:hover {
  border: 2px solid #0073e6;
  background: #fff;
}

.feature-icon svg {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
  stroke: #0a3325;
}

.feature-text {
  font-size: 13px;
  font-weight: 500;
  color: #0a3325;
  line-height: 1.3;
  text-transform: uppercase;
}
</style>
