
<section class="banner-content-main">
    <div class="main_page_banner">
        {% if section.settings.banner-img != blank %}
            <img src="{{ section.settings.banner-img | img_url: 'master'}}" class="banner-main" />
        {% endif %}
        <div class="banner-content">
            {% if section.settings.banner_header != blank %}
                <h1>{{ section.settings.banner_header }}</h1>
            {% endif %}
            {% if section.settings.sub-heading != blank %}
                <h3>{{ section.settings.sub-heading }}</h3>
            {% endif %}
            {% if section.settings.banner_content != blank %}
                <div class="banner-description">{{ section.settings.banner_content }}</div>
            {% endif %}

            {% assign banner_content_blocks = section.blocks | where: "type", "banner_content" %}
            {% if banner_content_blocks.size > 0 %}
                <div class="banner-items">
                    {% for block in banner_content_blocks  %}
                        <div class="banner-item" {{ block.shopify_attributes }}>
                            {% if block.settings.icon != blank %}
                            <img src="{{ block.settings.icon | image_url: width: 80 }}" />
                            {% endif %}
                            {% if block.settings.heading != blank %}
                                <p>{{ block.settings.heading }}</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        {% assign banner_badge_blocks = section.blocks | where: "type", "banner_badge" %}
        {% if banner_content_blocks.size > 0 %}
            <div class="banner-badge-content">
                 {% for block in banner_badge_blocks  %}
                      <div class="banner-badge" {{ block.shopify_attributes }}>
                            {% if block.settings.badge-icon != blank %}
                                <div class="banner__badge_media"> 
                                    <img src="{{ block.settings.badge-icon | image_url: width: 80 }}" />
                                </div>
                            {% endif %}
                            <div class="banner__badge__text">
                                {% if block.settings.heading != blank %}
                                    <p>{{ block.settings.heading }}</p>
                                {% endif %}
                                {% if block.settings.sub-heading != blank %}
                                    <p>{{ block.settings.sub-heading }}</p>
                                {% endif %}
                            </div>
                        </div>
                 {% endfor %}
            </div>
        {% endif %}
    </div>

</section>
<style>
    .main_page_banner{position:relative;}
    .banner-content h1, .banner-content h3{color:#fff;}
    .banner-content{position:absolute;bottom:0;color:#fff;}
</style>

{% schema %}
{
  "name": "Banner Content",
  "settings": [
    {
        "type": "image_picker",
        "id": "banner-img",
        "label": "Banner"
    },
    {
        "type": "text",
        "id":"banner_header",
        "label":"Heading"
    },
    {
        "type": "text",
        "id":"sub-heading",
        "label":"Sub-Heading"
    },
    {
        "type": "richtext",
        "id":"banner_content",
        "label":"Description"
    }
  ],
  "blocks": [
    {
        "type": "banner_content",
        "name":"Banner Content",
        "settings": [
            {
                "type": "text",
                "id":"heading",
                "label": "Heading"
            },
            {
                "type": "image_picker",
                "id": "icon",
                "label": "icon"
            }
        ]
    },
    {
        "type": "banner_badge",
        "name":"Banner Badge",
        "settings": [
            {
                "type": "image_picker",
                "id":"badge-icon",
                "label":"Badge-icon"
            },
            {
                "type": "text",
                "id":"heading",
                "label":"heading"
            },
            {
                "type": "text",
                "id":"sub-heading",
                "label":"sub-heading"
            }
        ]
    }
   ],
  "presets": [
    {
      "name": "Banner Content",
      "category": "page"
    }
  ]
}
{% endschema %}
