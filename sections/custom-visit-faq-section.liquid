{% comment %}
Section: Visit FAQ
Left side: Heading + Button (dynamic from schema)
Right side: FAQs (questions/answers from metafields)
Metafields:
- custom.visit_faq_ques
- custom.visit_faq_answers
{% endcomment %}

<section class="visit-faq-section" id="faqs">
  <div class="faq-container">
    <!-- Left Column -->
    <div class="faq-left">
      <h2 class="faq-heading1">{{ section.settings.heading }}</h2>
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="faq-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    <!-- Right Column -->
    <div class="faq-right">
      {% if product.metafields.custom.visit_faq_ques and product.metafields.custom.visit_faq_answers %}
        {% for question in product.metafields.custom.visit_faq_ques.value %}
          {% assign answer = product.metafields.custom.visit_faq_answers.value[forloop.index0] %}
          <div class="faq-item1">
            <button class="faq-question1">
              <span>{{ question }}</span>
              <span class="faq-icon">
                <!-- Simple Down Arrow SVG -->
                <svg class="faq-svg" width="20" height="20" viewBox="0 0 20 20" fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 7.5L10 12.5L15 7.5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            <div class="faq-answer1">
              <p>{{ answer }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
.visit-faq-section {
    padding: 85px 89px;
    background: #F5F5F5;
    max-width: 1700px;
    margin: 0 auto;
    border-radius: 20px;
}
.faq-container {
  display: flex;
  gap: 209px;
  max-width: 100%;
}
.visit-faq-section .faq-left {
  max-width:320px;
  width:100%;
}
.faq-heading1 {
  font-size: 40px;
  font-weight: 700;
  margin-bottom: 40px;
  color: #000;
}
.faq-btn {
    background: #12322b;
    color: #fff;
    padding: 12px 24px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 160px;
}
.visit-faq-section .faq-right {
  max-width:900px;
  width:100%;
}
.faq-item1 {
  border-bottom: 1px solid #ccc;
  padding: 15px 0;
}
.faq-question1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: none;
  border: none;
  width: 100%;
  font-size: 18px;
  text-align: left;
  cursor: pointer;
}
.faq-answer1 {
  display: none;
  margin-top: 10px;
  font-size: 15px;
  color: #333;
}
{% comment %} .faq-item1.active .faq-answer1 {
  display: block;
} {% endcomment %}
.faq-item1.active .faq-svg {
  transform: rotate(180deg);
}
.faq-svg {
  transition: transform 0.3s ease;
}
</style>

<script>
$(document).ready(function () {
  $(".faq-question1").on("click", function () {
    const $item = $(this).closest(".faq-item1");
    const $answer = $item.find(".faq-answer1");

    // Toggle active state
    $item.toggleClass("active");

    // Slide the answer up/down
    $answer.stop(true, true).slideToggle(300);

    // Optionally rotate the single arrow SVG
    $item.find(".faq-svg").toggleClass("rotated");
  });
});
</script>




{% schema %}
{
  "name": "Visit FAQ Sec",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Visit FAQ"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Visit FAQ Sec"
    }
  ]
}
{% endschema %}
