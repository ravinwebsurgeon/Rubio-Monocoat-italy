{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<div class="custom-contact-wrapper page-width spaced-section">
  <div class="custom-contact-inner">

    <!-- Left: Image with Text Overlay -->
    <div class="custom-contact-text-wrapper">
      {% if section.settings.floating_image != blank %}
        <div class="floating-image-wrapper">
          <img src="{{ section.settings.floating_image | image_url: width: 600 }}" alt="Floating image" class="floating-image" loading="lazy">
        </div>
      {% endif %}

      <div class="custom-contact-text-overlay">
  <h2 class="custom-contact-title">{{ section.settings.heading }}</h2>

  {% if section.settings.subheading != blank %}
    <p class="custom-contact-subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  {% if section.settings.paragraph != blank %}
    <p class="custom-contact-description">{{ section.settings.paragraph }}</p>
  {% endif %}

  {% if section.settings.additional_info != blank %}
    <div class="custom-contact-additional-info">
      {{ section.settings.additional_info }}
    </div>
  {% endif %}

  <!-- ✅ Three icon + text fields -->
  <div class="custom-contact-info">
    {% if section.settings.info1_text != blank %}
      <div class="info-item">
        <span class="info-icon">
          {{ section.settings.info1_icon }}
        </span>
        <span class="info-text">{{ section.settings.info1_text }}</span>
      </div>
    {% endif %}
    {% if section.settings.info2_text != blank %}
      <div class="info-item">
        <span class="info-icon">
          {{ section.settings.info2_icon }}
        </span>
        <span class="info-text">{{ section.settings.info2_text }}</span>
      </div>
    {% endif %}
    {% if section.settings.info3_text != blank %}
      <div class="info-item">
        <span class="info-icon">
          {{ section.settings.info3_icon }}
        </span>
        <span class="info-text">{{ section.settings.info3_text }}</span>
      </div>
    {% endif %}
  </div>
</div>

    </div>

    <!-- Right: Contact Form -->
    <div class="custom-contact-form">
      {%- form 'contact', id: 'CustomContactForm' -%}

        {% if form.posted_successfully? %}
          <div class="form-status success" tabindex="-1">Thank you! Your message has been sent.</div>
        {% elsif form.errors %}
          <div class="form-status error" tabindex="-1">Please fix the errors below.</div>
        {% endif %}

        <div class="name-email-text">
          <div class="custom-field">
            <label for="ContactFormName">Name</label>
            <input class="custom-field__input" type="text" id="ContactFormName" name="contact[name]" placeholder="Name" value="{{ form.name }}">
          </div>
          <div class="custom-field">
            <label for="ContactFormEmail">Email*</label>
            <input class="custom-field__input" type="email" id="ContactFormEmail" name="contact[email]" placeholder="Email" value="{{ form.email }}">
          </div>
        </div>
        <div class="custom-field">
          <label for="ContactFormPhone">Phone</label>
          <input class="custom-field__input" type="tel" id="ContactFormPhone" name="contact[phone]" placeholder="Phone" value="{{ form.phone }}">
        </div>

        <div class="custom-field">
          <label for="ContactFormMessage">Message</label>
          <textarea rows="6" id="ContactFormMessage" class="custom-field__input" name="contact[body]" placeholder="Message">{{ form.body }}</textarea>
        </div>

        <div class="custom-contact__button">
          <button type="submit" class="custom-button">Send</button>
        </div>

      {%- endform -%}
    </div>

  </div>
</div>

<style>
    .custom-contact-wrapper.spaced-section {
    padding-top:50px;
}
.custom-contact-inner {
  display: flex;
  flex-direction: row; /* ✅ Ensures image is left, form is right */
  align-items: center;
  justify-content: center;
  background-color: #00000008;
  border-radius: 12px;
  overflow: hidden;
}

.custom-contact-text-wrapper {
  position: relative;
  width: 50%; /* ✅ Left half */
}

.floating-image-wrapper {
  position: relative;
  width: 100%;
  {% comment %} max-height: 550px;
  min-height: 500px; {% endcomment %}
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.floating-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 12px 0 0 12px;
}

.custom-contact-text-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30px;
  color: #fff;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
  width: 100%;
  box-sizing: border-box;
  font-weight:600;
}

.custom-contact-title {
  font-size: 40px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #fff;
  line-height: normal;
  margin: 0;
}

.custom-contact-subheading {
  font-size: 16px;
  color: #fff;
  line-height: 25px;
  font-weight: 600;
  margin: 6px 0 0;
}

.custom-contact-description {
  margin-bottom: 20px;
}

.custom-contact-additional-info {
  font-size: 2rem;
  margin-top: 20px;
}

.custom-contact-form {
  width: 50%; /* ✅ Right half */
  padding: 40px;
  box-sizing: border-box;
  background: #f8f8f8;
  border-radius: 0 12px 12px 0;
}

.custom-field__input {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  outline:none;
}

.custom-button {
  background-color: #F58720;
  color: #fff;
  border-radius: 10px;
  font-size: 24px;
  line-height: normal;
  font-weight: 400;
  padding: 8px 49px;
  display: inline-block;
  cursor: pointer;
  border: 0;
}

.custom-button:hover {
  background-color: #ff9532;
}

.form-status {
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 6px;
}

.form-status.success {
  background-color: #d4edda;
  color: #155724;
}

.form-status.error {
  background-color: #f8d7da;
  color: #721c24;
}
.custom-contact-info {
  margin-top: 25px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10px;
  color: #fff;
  font-size: 16px;
  line-height: 1.4;
}

.info-icon svg {
  width: 20px;
  height: 20px;
  fill: #fff;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
}
.custom-contact-form label {
    margin-left: 12px;
}

.name-email-text .custom-field {
    margin-bottom: 15px;
}
#CustomContactForm .custom-field {
    margin-bottom: 15px;
}

/* ✅ Responsive adjustments */
@media screen and (max-width: 768px) {
  .custom-contact-inner {
    flex-direction: column;
  }

  .custom-contact-text-wrapper,
  .custom-contact-form {
    width: 100%;
  }

  .floating-image-wrapper {
    min-height: 250px;
    max-height: 350px;
  }

  .custom-contact-form {
    border-radius: 0 0 12px 12px;
  }

  .custom-contact-info {
    gap: 5px;
}
.custom-contact-additional-info p {
    margin: 0;
}

p.custom-contact-description {
    margin-bottom: 6px !important;
}

.custom-contact-text-overlay {
    top: -15px;
}

span.info-text {
    flex: none;
}

.custom-contact-text-overlay .custom-contact-info {
    max-width: max-content;
    margin: auto;
    margin-top: 20px;
}

.custom-contact-text-wrapper {
    text-align: center;
}

.info-item .info-icon{
   display:flex;
   align-items:center;
}
}
</style>

{% schema %}
