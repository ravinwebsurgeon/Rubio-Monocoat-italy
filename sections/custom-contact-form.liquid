  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "floating_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Contact Us",
      "label": "Heading"
    },
    {
      "type": "text",
