{% schema %}
{
  "name": "Floor Oil Steps",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What youâ€™ll need to oil your wooden floor"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Frutiger Condensed"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Step Label",
          "default": "PREPARATION"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Step Link"
        },
        {
          "type": "checkbox",
          "id": "highlight",
          "label": "Highlight this step"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Floor Steps",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="floor-steps-section">
  <div class="containers">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <div class="floor-steps-wrapper">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="floor-step {% if block.settings.highlight %}highlight{% endif %}">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '300x' }}" alt="{{ block.settings.label }}">
          {% endif %}
          <p>{{ block.settings.label }}</p>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.floor-steps-section{width:97%;margin:auto;}
.floor-steps-wrapper {
  display: flex;
  gap: 20px;
  justify-content: space-between;
  flex-wrap: wrap;
}

.floor-step {
  text-align: center;
  text-decoration: none;
  color: inherit;
  flex: 1 1 120px;
  max-width: 240px;
}

.floor-step img {
  border-radius: 50%;
  width: 170px;
  height: 170px;
  object-fit: cover;
  transition: transform 0.3s;
}

.floor-step.highlight img {
  border: 3px solid #5A5AFC;
  padding: 3px;
}

.floor-step:hover img {
  transform: scale(1.05);
}

.floor-step p {
  margin-top: 10px;
  font-weight: bold;
  font-size: 14px;
}
</style>
