<section class="custom-info-section">
  <div class="custom-info-container page-width">
    {% if section.settings.heading != blank %}
      <h2 class="custom-info-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
      <p class="custom-info-text">{{ section.settings.text }}</p>
    {% endif %}
  </div>
</section>

<style>
.custom-info-section {
  width: 100%;
  background-color: #b9cbc5;
  height: 400px;
  display: flex;
  align-items: center;
}

.custom-info-container {
  width: 100%;
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 50px;
  color: #000;
}

.custom-info-heading {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 15px;
  text-align: left;
  font-family: "Frutiger Neue LT W1G", sans-serif;
}

.custom-info-text {
  font-size: 18px;
  font-weight: 400;
  max-width: 600px;
  line-height: 1.6;
  text-align: left;
  font-family: "Frutiger Neue LT W1G", sans-serif;
}

/* Responsive */
@media (max-width: 991px) {
  .custom-info-section {
    height: auto;
    padding: 60px 0;
  }
  .custom-info-heading {
    font-size: 28px;
  }
  .custom-info-text {
    font-size: 16px;
  }
}

@media (max-width: 767px) {
  .custom-info-container {
    padding: 0 20px;
  }
  .custom-info-heading {
    font-size: 24px;
  }
  .custom-info-text {
    font-size: 15px;
  }
}
</style>

{% schema %}
{
  "name": "FAq banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description Text",
      "default": "We believe in creating quality products that inspire creativity and comfort. Our journey is built on passion, craftsmanship, and trust."
    }
  ],
  "presets": [
    {
      "name": "faq banner"
    }
  ]
}
{% endschema %}
