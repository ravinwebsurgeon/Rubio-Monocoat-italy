<section class="custom-info-section global-banners-intro">
  <div class="custom-info-container page-width">
    {% if section.settings.heading != blank %}
      <h2 class="custom-info-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
      <p class="custom-info-text">{{ section.settings.text }}</p>
    {% endif %}
  </div>
</section>

<style>
.custom-info-section {
  background: #b9cbc5;
  padding: 50px 0;
}

.custom-info-container {
  margin: 0 auto;
  max-width: 1760px;
  padding: 0 30px;
}

.custom-info-heading {
  color: #183029;
  font-family: Frutiger Neue LT W1G;
  font-weight: 700;
  font-size: 24px;
  line-height: normal;
  letter-spacing: 0;
  margin: 0 0 15px;
}

.custom-info-text {
  color: #183029;
  font-size: 16px;
  line-height: normal;
}

/* Responsive */
@media (max-width: 991px) {
  .custom-info-section {
    height: auto;
    padding: 60px 0;
  }
  .custom-info-heading {
    font-size: 28px;
  }
  .custom-info-text {
    font-size: 16px;
  }
}

@media (max-width: 767px) {
  .custom-info-container {
    padding: 0 20px;
  }
  .custom-info-heading {
    font-size: 24px;
  }
  .custom-info-text {
    font-size: 15px;
  }
}
</style>

{% schema %}
{
  "name": "FAq banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description Text",
      "default": "We believe in creating quality products that inspire creativity and comfort. Our journey is built on passion, craftsmanship, and trust."
    }
  ],
  "presets": [
    {
      "name": "faq banner"
    }
  ]
}
{% endschema %}
