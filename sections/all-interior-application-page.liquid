{% assign main_heading = page.metafields.custom.top_main_heading.value %}
{% assign main_subheading = page.metafields.custom.top_main_subheading %}
<section class="custom-info-section global-banners-intro">
  <div class="custom-info-container page-width">
    {% if main_heading %}
      <h2 class="custom-info-heading">{{ main_heading }}</h2>
    {% endif %}
    {% if main_subheading %}
      <p class="custom-info-text">{{ main_subheading}}</p>
    {% endif %}
  </div>
</section>


{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "all-interior-applications-section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
