<section class="video-banner-section">
  <div class="video-banner-wrapper">
    <video autoplay muted loop playsinline class="video-bg">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>

    <div class="overlay-content">
      <div class="animated-div" data-aos="fade-up">
      <h4 class="subheading">{{ section.settings.subheading }}</h4>
      <h2 class="main-heading">{{ section.settings.heading }}</h2>
      <a href="{{ section.settings.button_link }}" class="read-more-btn">
        {{ section.settings.button_label }}
      </a>
    </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video Banner with Overlay",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (MP4)",
      
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Your Main Heading"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Read More"
    }
  ],
  "presets": [
    {
      "name": "Video Banner with Overlay",
      "category": "Custom"
    }
  ]
}
{% endschema %}



<style>
.video-banner-section {
  position: relative;
  height: 800px;
  overflow: hidden;
}

.video-bg {
  width: 100%;
  height: 700px;
  object-fit: cover;
}

.overlay-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #fff;
      width: 100%;
}


</style>
