<div class="customer-reviews">
  <div class="container" data-aos="fade-up">
          <div class="review-hhheadiing">
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
      <div class="review-hediing-right">

      </div>
      </div>

    <div class="reviews-grid">
      {% for block in section.blocks %}
        <div class="cust-rev-section">
        <div class="review-card">
          <div class="review-header">
            <div class="profile-info">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '90x90' }}" alt="{{ block.settings.name }}" width="" height="">
              {% endif %}
              <div>
                <h3 class="name">{{ block.settings.name }}</h3>
                <p class="designation">{{ block.settings.designation }}</p>
              </div>
            </div>
            <div class="star-rating">
              {% if block.settings.stars %}
                <img src="{{ block.settings.stars | img_url: '80x' }}" alt="Star rating" width="" height="">
              {% endif %}
            </div>
          </div>
    
          <p class="review-text">{{ block.settings.review }}</p>
        </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
$(document).ready(function () {
  function initSlick() {
    if ($(window).width() < 989) {
      if (!$('.reviews-grid').hasClass('slick-initialized')) {
        $('.reviews-grid').slick({  
          dots:  true,
          arrows: false,
          appendArrows: $('.review-hediing-right'),
          prevArrow: '<div class="slick-prev"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.0.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/></svg></div>',
          nextArrow: '<div class="slick-next"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.0.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/></svg></div>',
          responsive: [
            {
              breakpoint: 989, // < 989px
              settings: {
                slidesToShow: 2
              }
            },
            {
              breakpoint: 749, // < 749px
              settings: {
                autoplay: true,
                infinite: false,
                slidesToShow: 1,
                centerMode:false
              }
            }
          ]
        });
      }
    } else {
      if ($('.reviews-grid').hasClass('slick-initialized')) {
        $('.reviews-grid').slick('unslick');
      }
    }
  }

  initSlick();
  $(window).on('resize', initSlick);
});

</script>


{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Designer"
        },
        {
          "type": "image_picker",
          "id": "stars",
          "label": "Star Rating"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review Text",
          "default": "This is the customer review text."
        }
      ]
    }
  ],
  
  "presets": [
    {
      "name": "Customer Reviews",
      "category": "Custom"
     
    }
  ]
}
{% endschema %}
