{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="main-tag-blog page-width section-{{ section.id }}-padding">
    <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
        <a href="{{ routes.root_url }}">Home</a>
        <span class="breadcrumb__separator">/</span>
        <span>{{ blog.title }}</span>
    </nav>
    <h1 class="blog_title title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ blog.title | escape }}
    </h1>
    <div class="tag_blogs_wrapper_main">
        <div class="blog-tag-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}">
        {%- for article in blog.articles -%}
            <div class="blog-tag-articles__article article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
            {% endif %}
            >
            {%- render 'tag-article-card',
                article: article,
                media_height: section.settings.image_height,
                media_aspect_ratio: article.image.aspect_ratio,
                show_image: section.settings.show_image,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author,
                show_excerpt: true
            -%}
            </div>
        {%- endfor -%}
        </div>
        <div class="search_blogs_section">
            <div class="search_section">
                <h2>Search our blog</h2>
                {% comment %} <div class="blog__search__field search">
                    <div class="control">
                        <input id="blog_search" type="text" placeholder="Search posts here..." class="input-search-text">
                    </div>
                </div> {% endcomment %}
                <div class="blog__search__field search">
                    <form role="search" method="get" action="/search" class="blog-search-form">
                        <input 
                            type="search" 
                            name="q" 
                            placeholder="Search blog postsâ€¦" 
                            value="{{ search.terms | escape }}" 
                            aria-label="Search blog posts"
                        >
                        <input type="hidden" name="type" value="article">
                    </form>
                </div>
                <div class="blogs_list">
                    {% comment %}
                      {% for blog_item in blogs %}
                        <h2><a href="{{ blog_item.url }}">{{ blog_item.title }}</a></h2>
                      {% endfor %}
                      {% endcomment %}
                    <h2>Categories</h2>

                    {% assign blog_handles = "news,updates,stories,collection,tag" | split: "," %}
                        {% for handle in blog_handles %}
                            {% assign this_blog = blogs[handle] %}
                            {% assign count = this_blog.articles_count | default: 0 | plus: 0 %}
                            {% if count > 0  %}
                                <p>
                                  <a href="{{ this_blog.url }}">
                                      {{ this_blog.title }}
                                      {% if this_blog.articles_count > 0 %}<span>({{ this_blog.articles_count }})</span>{% endif %}
                                  </a>
                                </p>
                            {% else %}
                            {% endif %}
                        {% endfor %}
                </div>
                <div class="Blog_tags_list_main">
                    <div class="tag_list">
                        <h2>Tags</h2>
                        {% for tag in blog.tags %}
                          <a href="/blogs/{{blog.handle}}/tagged/{{tag}}">
                            <p>{{ tag }}</p>
                          </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="blog_contact_us_section">
                {% assign heading = blog.metafields.custom.blog_contact_heading.value %}
                {% assign image = blog.metafields.custom.blog_contact_image.value %}
                {% assign text = blog.metafields.custom.blog_contact_text.value %}
                {% assign method_text = blog.metafields.custom.blog_contact_method_text.value %}
                <div class="contact_image_section">
                    <img src="{{ image | img_url: 'small' }}" />
                </div>
                 <div class="contact_image_section">
                    <h2>{{ heading }}</h2>
                    <p>{{ text }}</p>
                </div>
                <div class="contact__method">
                    {% for text in method_text %}
                        <div class="content_data">
                            {% if forloop.index0 == 0 %}
                                <a href="tel:+1234567890">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M22 16.92v3a2.1 2.1 0 0 1-2.3 2 19.8 19.8 0 0 1-8.6-3.07A19.5 19.5 0 0 1 3.16 9.9 19.8 19.8 0 0 1 .09 1.27 2.1 2.1 0 0 1 2.11-.02h3a2.1 2.1 0 0 1 2.1 1.8c.13 1.08.39 2.14.77 3.15a2.1 2.1 0 0 1-.48 2.22L6.1 8.36a16.5 16.5 0 0 0 6.54 6.54l1.22-1.22a2.1 2.1 0 0 1 2.22-.48 14.5 14.5 0 0 0 3.15.77A2.1 2.1 0 0 1 22 16.92z"/>
                                  </svg>
                                </a>
                            {% endif %}
                            {% if forloop.index0 == 1 %}
                                <a href="mailto:your-email@example.com">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm0 2v.01L12 13 4 6.01V6h16zM4 18V8.24l8 6 8-6V18H4z"/>
                                  </svg>
                                </a>
                            {% endif %}
                            <p>{{ text }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

