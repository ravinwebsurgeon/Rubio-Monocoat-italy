    filter: none;
}
.custom-prev, .custom-next {
  background: none;
  border: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  cursor: pointer;
  width: 42px;
  height: 42px;
  border-radius: 100%;
  background-color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
}
.custom-prev { 
  left: 70px; 
}
.custom-next { 
  right: 70px; 
}
.inspired-slider .custom-prev svg,.inspired-slider .custom-next  svg {
  display: block;
  height: 30px;
  width: 30px;
  fill:#183029;
}

.slide-media iframe {
  width: 100%;
  height: 100%;
  min-height: 300px;
  border-radius: 10px;
}
.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s ease, visibility 0.4s ease;
}

/* When active (center slide) */
.inspired-slide.slick-center .play-button {
  opacity: 1;
  visibility: visible;
}
.play-button svg {
    display: block;
    width: 80px;
    height: 80px;
}
.inspired-slider .slick-list,.inspired-slider .slick-list .slick-track {
    display: flex;
    align-items: center;
}

.inspired-slider .swiper-button-prev.custom-prev {
    transform: translate(-120%, -50%);
    transition: all ease 00.3s;
    opacity:0;
}

.inspired-slider .swiper-button-next.custom-next {
    transform: translate(120%, -50%);
    transition: all ease 00.3s;
     opacity:0;
}

.inspired-slider:hover .swiper-button-next.custom-next {
    transform: translate(-10%, -50%);
     opacity:1;
}
.inspired-slider:hover .swiper-button-prev.custom-prev {
    transform: translate(10%, -50%);
    opacity:1;
}





