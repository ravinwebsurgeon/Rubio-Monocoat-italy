<section class="inspired-slider-section">
  <div class="container">
    <h2 class="slider-heading">
      {{ product.metafields.custom.inspired_heading | default: "Get Inspired" }}
    </h2>

    <div class="video-collage">
      {% assign video_urls = product.metafields.custom.inspired_videos | split: ' â€¢ ' %}
      {% for video_url in video_urls %}
        {% if video_url != blank %}
          <div class="video-item">
            <video autoplay muted loop playsinline>
              <source src="{{ video_url | strip }}" type="video/mp4">
            </video>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="inspired-products">
      {% for product_ref in product.metafields.custom.inspired_products.value %}
        {% assign prod = product_ref %}
        {% if prod %}
          <div class="product-card">
            <a href="{{ prod.url }}" class="product-link">
              <div class="product-image">
                <img src="{{ prod.featured_image | img_url: '600x' }}" alt="{{ prod.title }}">
              </div>
              <div class="product-details">
                <h3>{{ prod.title }}</h3>
                <span class="price">{{ prod.price | money }}</span>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>



<style> 
  .slide-media iframe {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  min-height: 300px;
}
.video-wrapper img {
  width: 100%;
  border-radius: 12px;
  display: block;
}
.inspired-slider-section {
  padding: 100px 0;
  text-align: center;
  overflow:hidden;
}
.inspired-slider-section .container {
    padding: 0 20px;
    max-width: 1740px;
}
.slider-heading {
  font-size: 40px;
  font-weight: 700;
  margin-bottom: 50px;
  text-align:left;
  color:#000;
  font-family: Frutiger Neue LT W1G;
}
.inspired-slider {
  margin: 0 0 30px;
}
.inspired-slide {
  position: relative;
  padding: 0;
}
.inspired-slide img {
  width: 100%;
  border-radius: 12px;
}
.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  cursor: pointer;
}
.video-wrapper {
  position: relative;
}
.inspired-product-info div#inspired-proouter a {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding:0;
  border-radius: 0;
  color: #000;
  font-size: 24px;
  text-decoration: none;
  line-height: normal;
  letter-spacing: 0;
  font-weight: bold;
  text-align:left;
  flex: 1;
}
.inspired-product-info div#inspired-proouter .product-image-wrap{
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 15px;
  border: 1px solid #183029;
  border-radius: 12px;
  background: #fff;
  max-width: 410px;
  width: 86%;
  background-color: #F5F5F5;
  color: #000;
  font-size: 24px;  
}
.inspired-product-info img {
    width: 83px;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 0.9;
    display: block;
}
.inspired-product-info #product-title {
    margin: 0;
    font-size:18px;
}
.inspired-product-info .product-info-wrap p {
    margin: 0;
}

.inspired-product-info .product-info-wrap .vendor {
    font-size: 14px;
    font-weight:400;
    opacity:0.8;
}
.inspired-product-info #product-title a {
    font-size: 24px;
    text-decoration: none;
    line-height: normal;
    letter-spacing: 0;
    color: #000;
    font-weight: bold;
}
.inspired-slider .slick-slide {
  transition: all 0.4s ease;
  transform: scale(1);
  padding: 0 25px;
}
.inspired-slider .slick-center {
  opacity: 1;
  transform: scale(1.14);
  z-index: 2;
  padding-left:30px;
  padding-right:30px;
}
.inspired-slider .slick-list .slick-track {
    padding-top: 50px;
    padding-bottom: 50px;
}
.inspired-product-info div#inspired-proouter .atc-btn-wrap a {
    width: 36px;
    height: 36px;
    border: 1px solid #ccc;
    border-radius: 30px;
    justify-content: center;
    align-items: center;
}
.inspired-product-info .atc-btn-wrap img {
    width: 16px;
    filter: invert(1);
    height: auto;
}
.inspired-product-info div#inspired-proouter .atc-btn-wrap a:hover {
    background-color: #000;
}
.inspired-product-info div#inspired-proouter .atc-btn-wrap a:hover img {
    filter: none;
}
.custom-prev, .custom-next {
  background: none;
  border: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  cursor: pointer;
  width: 42px;
  height: 42px;
  border-radius: 100%;
  background-color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
}
.custom-prev { 
  left: 70px; 
}
.custom-next { 
  right: 70px; 
}
.inspired-slider .custom-prev svg,.inspired-slider .custom-next  svg {
  display: block;
  height: 30px;
  width: 30px;
  fill:#183029;
}

.slide-media iframe {
  width: 100%;
  height: 100%;
  min-height: 300px;
  border-radius: 12px;
}
.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s ease, visibility 0.4s ease;
}

/* When active (center slide) */
.inspired-slide.slick-center .play-button {
  opacity: 1;
  visibility: visible;
}
.play-button svg {
    display: block;
    width: 80px;
    height: 80px;
}
.inspired-slider .slick-list,.inspired-slider .slick-list .slick-track {
    display: flex;
    align-items: center;
}

.inspired-slider .swiper-button-prev.custom-prev {
    transform: translate(-120%, -50%);
    transition: all ease 00.3s;
    opacity:0;
}

.inspired-slider .swiper-button-next.custom-next {
    transform: translate(120%, -50%);
    transition: all ease 00.3s;
     opacity:0;
}

.inspired-slider:hover .swiper-button-next.custom-next {
    transform: translate(-10%, -50%);
     opacity:1;
}
.inspired-slider:hover .swiper-button-prev.custom-prev {
    transform: translate(10%, -50%);
    opacity:1;
}





@media(max-width: 1900px) { 
  .inspired-slider-section .container {
    padding: 0 30px;
  }
  .play-button svg {
    display: block;
    width: 58px;
    height: 58px;
}
  .inspired-slider-section {
    padding: 50px 0;
  } 
  .inspired-product-info div#inspired-proouter a {
    font-size:18px;
  }
  {% comment %} .inspired-slider .slick-slide {
      padding: 0 32px;
  } {% endcomment %}
  .inspired-slider .slick-arrow svg {
    height: 18px;
    width: 18px;
  }
  .custom-prev, .custom-next{
    width:36px;
    height:36px;
  }
}
@media(max-width: 1199px) {
    {% comment %} .inspired-product-info div#inspired-proouter a {
      max-width: 360px;
    } {% endcomment %}
}
@media(max-width: 767px) {
  .inspired-slider-section {
      padding: 30px 0;
  }
  .inspired-slider-section .container {
      padding: 0 20px;
  }
  .inspired-slider-section .container .slider-heading {
    font-size: 24px;
    text-align: left;
    margin: 0 0 20px;
  }
  .inspired-slider .slick-list .slick-track{
    padding-top:0;
    padding-bottom:0;
  }
  .inspired-slider .slick-slide {
     padding: 0 0px;
  }
 
  .inspired-slider .slick-list {
    padding: 0 !important;
  }
  .inspired-slider {
    margin: 0 0px 20px;
  }
  .custom-prev, .custom-next {
    {% comment %} width: 24px;
    height: 24px; {% endcomment %}
    border: 1px solid rgba(0, 0, 0, 0.2);
  }
  .custom-prev {
    left: -13px;
  }
  .custom-next{
    right: -13px;
  }
  .play-button svg {
    width: 30px;
    height: 30px;
}
.inspired-slider .custom-prev svg,.inspired-slider .custom-next  svg {
  display: block;
  height: 24px;
  width: 24px;
  fill:#183029;
}
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  var swiper = new Swiper(".inspired-slider", {
    slidesPerView: 4.2,
    centeredSlides: true,
    loop: true,
    spaceBetween: 20,
    navigation: {
      nextEl: ".custom-next",
      prevEl: ".custom-prev",
    },
    breakpoints: {
      0: { slidesPerView: 1.2, spaceBetween: 10 },
      768: { slidesPerView: 2.2, spaceBetween: 20, centeredSlides: true },
      1024: { slidesPerView: 4.5, spaceBetween: 20, centeredSlides: true }
    },
    on: {
      slideChangeTransitionEnd: function () {
        updateProductInfo();
        playCenterVideo(this);
      },
      init: function () {
        updateProductInfo();
        playCenterVideo(this);
      }
    }
  });

  function updateProductInfo() {
    let centerSlide = document.querySelector(".inspired-slide.swiper-slide-active");
    if (centerSlide) {
      let title = centerSlide.getAttribute("data-product-title");
      let img = centerSlide.getAttribute("data-product-img");
      let url = centerSlide.getAttribute("data-product-url");
      let vendor = centerSlide.getAttribute("data-product-vendor");
      let price = centerSlide.getAttribute("data-product-price");
      let variantId = centerSlide.getAttribute("data-variant-id");

      document.getElementById("inspired-proouter").innerHTML = `
        <div class="product-image-wrap">
          <a href="${url}">
            <img id="product-img" src="${img}" alt="${title}">
            <div class="product-info-wrap">
              <p id="product-vendor" class="vendor">${vendor}</p>
              <p id="product-title" class="title">${title}</p>
              <p id="product-price" class="price">${price}</p>
            </div>
          </a>
          <div class="atc-btn-wrap">
            <a href="#" class="add-to-cart-btn" data-variant-id="${variantId}">
              <img src="{{ 'icon-cart.svg' | asset_url }}" alt="Cart Icon">
            </a>
          </div>
        </div>`;
    }
  }

  function playCenterVideo(swiper) {
    swiper.slides.forEach(slide => {
      let video = slide.querySelector("video");
      if (video) video.pause();
    });

    let centerSlide = swiper.slides[swiper.activeIndex];
    let centerVideo = centerSlide.querySelector("video");
    if (centerVideo) {
      centerVideo.currentTime = 0;
      let playPromise = centerVideo.play();
      if (playPromise !== undefined) {
        playPromise.catch(err => console.log("Autoplay prevented:", err));
      }
    }
  }

  window.addEventListener("load", () => playCenterVideo(swiper));
});
</script>

