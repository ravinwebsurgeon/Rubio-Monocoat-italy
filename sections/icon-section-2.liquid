{% schema %}
{
  "name": "Icon Section 2",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "svg_icon",
          "label": "SVG Icon Code"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Heading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Section 2",
      "category": "Custom",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

<section class="icon-features" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item">
          <div class="feature-icon">
            {{ block.settings.svg_icon }}
          </div>
          <h3 class="feature-heading">{{ block.settings.heading }}</h3>
          <p class="feature-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.icon-features {
  margin:100px 0px;
  padding:58px 0;
}
.icon-features .container {
    padding: 0;
}
.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  text-align: center;
}
.feature-item {
  padding: 0;
}
.feature-icon {
  margin-bottom: 20px;
}
.feature-description {
  font-size: 16px;
    color: #555;
    line-height: normal;
    max-width: 250px;
    margin: 0 auto;
}
.feature-heading {
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    line-height: normal;
    max-width: 320px;
    margin: 0 auto 10px;
}
.feature-item .feature-icon svg {
    display: block;
    margin: 0 auto;
    height: 60px;
    width: 60px;
    object-fit: contain;
}


@media(max-width:1900px){
  .icon-features {
      margin: 50px 0px;
      padding: 30px 0;
  } 
  .feature-item .feature-icon svg {
    height: 44px;
    width: 44px;
 }
 .feature-icon {
    margin-bottom: 10px;
  }
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  function initSlick() {
    var $grid = jQuery(".features-grid");

    if (window.innerWidth < 992) {
      if (!$grid.hasClass("slick-initialized")) {
        $grid.slick({
          dots: true,
          arrows: false,
          infinite: false,
          slidesToShow: 2,
          slidesToScroll: 1,
          adaptiveHeight: true,
          responsive: [
            {
              breakpoint: 750,
              settings: {
                slidesToShow: 1
              }
            }
          ]
        });
      }
    } else {
      if ($grid.hasClass("slick-initialized")) {
        $grid.slick("unslick");
      }
    }
  }

  initSlick();
  window.addEventListener("resize", function () {
    initSlick();
  });
});
</script>

