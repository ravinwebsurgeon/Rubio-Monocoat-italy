{% comment %} <section class="icon-columns-section {{ section.settings.class_add }}">
  <div class="container" data-aos="fade-up">
    <h2 class="main-headingsds" >{{ section.settings.main_heading }}</h2>
    <p class="main-subtext" >{{ section.settings.main_text }}</p>

    <div class="icon-columns">
      {% for block in section.blocks %}
        <div class="icon-column">
            <div class="icon-image-wrap">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="{{ block.settings.heading }}" class="icon-image" width="" height="">
          {% endif %}
        </div>
         <div>
          <h3 class="icon-heading">{{ block.settings.heading }}</h3>
          <p class="icon-text">{{ block.settings.text }}</p>
         </div>
          
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "custom multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "class_add",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Our Features"
    },
    {
      "type": "text",
      "id": "main_text",
      "label": "Subtext",
      "default": "What makes us special"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Short description of the feature."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "custom multicolumn",
      "category": "Custom Sections",
      "blocks": [
        { "type": "column" },
        { "type": "column" },
        { "type": "column" },
        { "type": "column" }
      ]
    }
  ]
}
{% endschema %} {% endcomment %}


<section class="icon-columns-section {{ section.settings.class_add }}" 
         style="background-color: {{ section.settings.section_bg_color }};">
  <div class="container" data-aos="fade-up">
    <h2 class="main-headingsds" 
        style="color: {{ section.settings.heading_color }}; 
               font-size: {{ section.settings.heading_font_size }};
               @media(max-width: 767px) { font-size: {{ section.settings.heading_font_size_mobile }}; }">
      {{ section.settings.main_heading }}
    </h2>

    <p class="main-subtext" 
       style="color: {{ section.settings.text_color }};
              font-size: {{ section.settings.text_font_size }};
              @media(max-width: 767px) { font-size: {{ section.settings.text_font_size_mobile }}; }">
      {{ section.settings.main_text }}
    </p>

    <div class="icon-columns">
      {% for block in section.blocks %}
        <div class="icon-column">
          <div class="icon-image-wrap" 
               style="background-color: {{ block.settings.icon_bg_color }};
                      width: {{ block.settings.icon_wrap_width }};
                      height: {{ block.settings.icon_wrap_height }};
                      @media(max-width: 767px) { width: {{ block.settings.icon_wrap_width_mobile }};max-width: {{ block.settings.icon_wrap_width_mobile }};
                                               height: {{ block.settings.icon_wrap_height_mobile }}; }">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '100x100' }}" 
                   alt="{{ block.settings.heading }}" 
                   style="width: {{ block.settings.icon_width }}; max-width: {{ block.settings.icon_width }};
                          height: {{ block.settings.icon_height }};
                          @media(max-width: 767px) { width: {{ block.settings.icon_width_mobile }}; max-width: {{ block.settings.icon_width_mobile }};
                                                   height: {{ block.settings.icon_height_mobile }}; }">
            {% endif %}
          </div>

          <div>
            <h3 class="icon-heading" 
                style="color: {{ block.settings.heading_color }}; 
                       font-size: {{ block.settings.heading_font_size }};
                       @media(max-width: 767px) { font-size: {{ block.settings.heading_font_size_mobile }}; }">
              {{ block.settings.heading }}
            </h3>

            <p class="icon-text" 
               style="color: {{ block.settings.text_color }};
                      font-size: {{ block.settings.text_font_size }};
                      @media(max-width: 767px) { font-size: {{ block.settings.text_font_size_mobile }}; }">
              {{ block.settings.text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

