{% comment %} <section class="icon-columns-section {{ section.settings.class_add }}">
  <div class="container" data-aos="fade-up">
    <h2 class="main-headingsds" >{{ section.settings.main_heading }}</h2>
    <p class="main-subtext" >{{ section.settings.main_text }}</p>

    <div class="icon-columns">
      {% for block in section.blocks %}
        <div class="icon-column">
            <div class="icon-image-wrap">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="{{ block.settings.heading }}" class="icon-image" width="" height="">
          {% endif %}
        </div>
         <div>
          <h3 class="icon-heading">{{ block.settings.heading }}</h3>
          <p class="icon-text">{{ block.settings.text }}</p>
         </div>
          
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "custom multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "class_add",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Our Features"
    },
    {
      "type": "text",
      "id": "main_text",
      "label": "Subtext",
      "default": "What makes us special"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Short description of the feature."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "custom multicolumn",
      "category": "Custom Sections",
      "blocks": [
        { "type": "column" },
        { "type": "column" },
        { "type": "column" },
        { "type": "column" }
      ]
    }
  ]
}
{% endschema %} {% endcomment %}


<section class="icon-columns-section {{ section.settings.class_add }}" 
         style="background-color: {{ section.settings.section_bg_color }};">
  <div class="container" data-aos="fade-up">
    <h2 class="main-headingsds section-heading-{{ section.id }}" >
      {{ section.settings.main_heading }}
    </h2>

    <p class="main-subtext section-text-{{ section.id }}">
      {{ section.settings.main_text }}
    </p>

    <div class="icon-columns">
      {% for block in section.blocks %}
        <div class="icon-column">
          <div class="icon-image-wrap block-wrap-{{ block.id }}">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '100x100' }}" 
                   alt="{{ block.settings.heading }}" 
                   class="icon-img-{{ block.id }}">
            {% endif %}
          </div>

          <div>
            <h3 class="icon-heading icon-heading-{{ block.id }}">
              {{ block.settings.heading }}
            </h3>

            <p class="icon-text icon-text-{{ block.id }}">
              {{ block.settings.text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* Section heading/text */
.section-heading-{{ section.id }} {
  color: {{ section.settings.heading_color }};
  font-size: {{ section.settings.heading_font_size }};
}
.section-text-{{ section.id }} {
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.text_font_size }};
}

/* Responsive for section */
@media (max-width: 767px) {
  .section-heading-{{ section.id }} {
    font-size: {{ section.settings.heading_font_size_mobile }};
  }
  .section-text-{{ section.id }} {
    font-size: {{ section.settings.text_font_size_mobile }};
  }
}

/* Blocks */
{% for block in section.blocks %}
.icon-columns-section .block-wrap-{{ block.id }} {
  background-color: {{ block.settings.icon_bg_color }};
  width: {{ block.settings.icon_wrap_width }};
  max-width: {{ block.settings.icon_wrap_width }};
  height: {{ block.settings.icon_wrap_height }};
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-columns-section .icon-img-{{ block.id }} {
  width: {{ block.settings.icon_width }};
  max-width: {{ block.settings.icon_width }};
  max-width: {{ block.settings.icon_width }};
  height: {{ block.settings.icon_height }};
}

/* Headings & text */
.icon-columns-section .icon-heading-{{ block.id }} {
  color: {{ block.settings.heading_color }};
  font-size: {{ block.settings.heading_font_size }};
}
.icon-columns-section .icon-text-{{ block.id }} {
  color: {{ block.settings.text_color }};
  font-size: {{ block.settings.text_font_size }};
}

/* Mobile responsive */
@media (max-width: 767px) {
  .icon-columns-section .block-wrap-{{ block.id }} {
    width: {{ block.settings.icon_wrap_width_mobile }};
    max-width: {{ block.settings.icon_wrap_width_mobile }};
    height: {{ block.settings.icon_wrap_height_mobile }};
  }
  .icon-columns-section .icon-img-{{ block.id }} {
    width: {{ block.settings.icon_width_mobile }};
    max-width: {{ block.settings.icon_width_mobile }};
    height: {{ block.settings.icon_height_mobile }};
  }
  .icon-columns-section .icon-heading-{{ block.id }} {
    font-size: {{ block.settings.heading_font_size_mobile }};
  }
  .icon-columns-section .icon-text-{{ block.id }} {
    font-size: {{ block.settings.text_font_size_mobile }};
  }
}
{% endfor %}
</style>

