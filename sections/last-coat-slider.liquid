
<div class="last-coat-slider">
    <div class="heading_main">
        {% if section.settings.heading  != blank %}  <h2>{{ section.settings.heading }}</h2> {% endif %}
    </div>
    <div class="slider__content">
        {% assign slider_block = section.blocks | where:  "type","slide" %}
        {% for block in slider_block %}
            <div class="slide_item">
                <img src="{{ block.settings.image | img_url: 'master' }}" />
                <p>{{ block.settings.text }}</p>
            </div>
        {% endfor %}
    </div>
</div>
<style>
    .slider__content{width:700px;margin:auto;}
    .slide_item img{width:100%;}
    .slick-prev.slick-disabled,
    .slick-next.slick-disabled {
    display: none !important;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        $('.slider__content').slick({
          slidesToShow: 1,
          dots: false,
          arrows: true,
          loop:false,
          infinite:false,
          prevArrow: ` <button type="button" class="slick-prev custom-prev">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" width="24" height="24">
                <path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/>
            </svg>
            </button>`,
          nextArrow:`<button type="button" class="slick-next custom-next">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" width="24" height="24">
                <path d="M168.9 297.4C156.4 309.9 156.4 330.2 168.9 342.7L360.9 534.7C373.4 547.2 393.7 547.2 406.2 534.7C418.7 522.2 418.7 501.9 406.2 489.4L236.8 320L406.1 150.6C418.6 138.1 418.6 117.8 406.1 105.3C393.6 92.8 373.3 92.8 360.8 105.3L168.8 297.3z"/>
            </svg>
            </button>`
        });
    });
</script>
{% schema %}
{
  "name": "Last Coat Banner Slider",
  "settings": [
    {
        "type": "text",
        "id":"heading",
        "label":"Heading"
    }
  ],
  "blocks": [
    {
        "type": "slide",
        "name":"slide",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id":"text",
                "label":"text"
            }
        ]
    }
   ],
  "presets": [
    {
      "name": "Last Coat Banner Slider",
      "category": "page"
    }
  ]
}
{% endschema %}