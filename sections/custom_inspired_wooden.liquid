{% assign source_page = pages[section.settings.source_page] %}
{% assign product_handles = section.settings.Products | parse_json %}
{% comment %} {% assign inspired_products = source_page.metafields.custom.inspired_wooden_product.value %} {% endcomment %}

{% assign inspired_wooden_images = source_page.metafields.custom.inspired_wooden_images.value %}
{% comment %} {% assign heading = source_page.metafields.custom.inspired_wooden_heading.value %} {% endcomment %}
{% comment %} {% assign subheading = source_page.metafields.custom.inspired_wooden_subheading.value %} {% endcomment %}
<section class="inspired-collage-section">
  <div class="container">
    <div class="collage-header-main">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="collage-grid-section">
      {% for image in inspired_wooden_images %}
        {% assign handle = product_handles[forloop.index0] %}
        {% assign product = all_products[handle] %}
        {% if product %}
          <div class="inspired-collage-item {% if forloop.first %}large{% else %}small{% endif %}" 
               style="background-image: url('{{ image | img_url: 'master' }}')">
            <a href="javascript:void(0);" 
               class="item-overlay-btn {% for pro in product_handles%} {% if forloop.index == forloop.parentloop.index %} {{ pro.title | handleize }} {% endif %} {% endfor %}" 
               {% for pro in product_handles%} {% if forloop.index == forloop.parentloop.index %}  data-product-handle="{{ pro.handle }}" {% endif %} {% endfor %}>
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="20" cy="20" r="20" fill="black" fill-opacity="0.5"/>
                <circle cx="20" cy="20" r="9" fill="white"/>
              </svg>
            </a>

            <div class="item-hotspot-popup">
              <span class="close-hotspot">&times;</span>
              <div class="hotspot-content"></div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
.inspired-collage-section{
  padding:100px 0 50px;
}
.inspired-collage-section .container{ 
  max-width: 1760px; 
  margin: 0 auto; 
  padding: 0 30px;
  font-family: Frutiger Neue LT W1G;
}
.collage-header-main h2 { 
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 36px;
    line-height: normal;
    margin: 0 0 10px;
}
.collage-header-main p { 
  font-size: 24px; 
  color: rgba(0,0,0,0.7); 
  line-height: normal;
}
.collage-grid-section {
  display: grid;
  grid-template-columns: 1.3fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 16px;
  margin:50px 0 0;
}
.inspired-collage-item { 
  position: relative; 
  border-radius: 12px; 
  cursor: pointer; 
  background-size: cover; 
  background-position: center; 
  min-height: 400px;
}
.inspired-collage-item.large {
  grid-column: 1 / 2;
  grid-row: 1 / 3;
}
.inspired-collage-item.small {
}
.item-overlay-btn { 
   position: absolute; 
   top: 10px; 
   left: 10px; 
   z-index: 1; 
   cursor:pointer;
}

.item-hotspot-popup {
  display: none;
  position: absolute;
  top: 50px; 
  left: 0;
  width: 240px;
  background: #fff;
  border-radius: 20px;
  padding: 30px 20px;
  z-index: 2;
  box-sizing: border-box;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.item-hotspot-popup .close-hotspot {
  position: absolute;
  top: -5px;
  right: -5px;
  background: #183029;
  font-size: 16px;
  cursor: pointer;
  z-index: 2;
  color: #fff;
  width: 24px;
  height: 24px;
  display: flex  ;
  align-items: center;
  justify-content: center;
  border-radius: 50px;
  line-height: 24px;
  font-family: arial;
  padding: 0;
  border: none;
}
.item-hotspot-popup form {
    text-align: center;
}
.item-hotspot-popup img {
  width: 160px;
  height: 160px;
  border-radius:10px;
  margin:0 auto;
  max-width:100%;
  display:block;
  object-fit:contain;
}
.item-hotspot-popup h3 {
  margin: 15px 0 5px;
  font-size: 16px;
  font-weight: 500;
  font-family: Frutiger Neue LT W1G;
  color:#000;
  line-height: normal;
}
.item-hotspot-popup p {
  font-size: 12px;
  margin-bottom: 0;
  font-family: Frutiger Neue LT W1G;
  color:rgba(0,0,0,0.7);
  line-height: normal;
}
.item-hotspot-popup button {
  color: white;
  border: none;
  padding: 10.5px 32px;
  border-radius: 33px;
  font-size: 14px;
  cursor: pointer;
  font-family: Frutiger Neue LT W1G;
  width: auto;
  font-weight: bold;
  background-color: #F79E1B;
  display: inline-flex;
  margin: 20px auto 0;
}
.inspired-collage-item.large .item-overlay-btn {
    left: 50%;
    top: 50%;
    width: 40px;
    height: 40px;
    transform: translate(-50%, -50%);    
}
.item-overlay-btn svg {
    display: block;
}
.inspired-collage-item:nth-child(2) .item-overlay-btn {
    top: 68px;
    left: 53%;
}
.inspired-collage-item:nth-child(3) .item-overlay-btn {
    top: 77px;
    left: 60%;
}
.inspired-collage-item:nth-child(4) .item-overlay-btn {
    top: 68px;
    left: auto;
    right:30%;
}
.inspired-collage-item:nth-child(5) .item-overlay-btn {
    top: 97px;
    left: auto;
    right:22.5%;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function(){
  const buttons = document.querySelectorAll(".item-overlay-btn");

  buttons.forEach(btn => {
    const popup = btn.closest(".inspired-collage-item").querySelector(".item-hotspot-popup");
    const content = popup.querySelector(".hotspot-content");
    const closeBtn = popup.querySelector(".close-hotspot");

    btn.addEventListener("click", function(e){
      const handle = this.dataset.productHandle;

      // Hide all other popups
      document.querySelectorAll(".item-hotspot-popup").forEach(p => { if(p !== popup) p.style.display = 'none'; });

      // Position popup relative to SVG
      const rect = btn.getBoundingClientRect();
      const parentRect = btn.closest(".inspired-collage-item").getBoundingClientRect();
      popup.style.top = (btn.offsetTop + btn.offsetHeight + 5) + 'px';
      {% comment %} popup.style.left = (btn.offsetLeft) + '%'; {% endcomment %}

      // Fetch product data
      fetch(`/products/${handle}.js`)
        .then(res => res.json())
        .then(product => {
          content.innerHTML = `
            <img src="${product.images[0]}" alt="${product.title}">
            <h3>${product.title}</h3>
            <p>${product.body_html}</p>
            <form action="/cart/add" method="post">
              {% comment %} <select name="id">
                ${product.variants.map(v => `<option value="${v.id}">${v.title} - $${(v.price/100).toFixed(2)}</option>`).join('')}
              </select> {% endcomment %}
              <button type="submit">Add to Cart</button>
            </form>
          `;
          popup.style.display = "block";
        });
    });

    closeBtn.addEventListener("click", () => popup.style.display = "none");
  });

  // Close popup when clicking outside
  document.addEventListener("click", e => {
    if(!e.target.closest(".inspired-collage-item")) {
      document.querySelectorAll(".item-hotspot-popup").forEach(p => p.style.display = 'none');
    }
  });
});
</script>

{% schema %}
