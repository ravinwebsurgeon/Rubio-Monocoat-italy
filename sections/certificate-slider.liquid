<section class="certificates-slider">
  <div class="certificates-header">
    <h2>{{ section.settings.section_heading }}</h2>
    <div class="certificates-arrows">
      <div class="prev-btn">
      <button type="button" class="cert-prev">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/></svg>
      </button>
      </div>
      <div class="next-btn">
      <button type="button" class="cert-next">
       <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/></svg>
      </button>
      </div>
    </div>
  </div>

  <div class="certificates-carousel">
    {% for block in section.blocks %}
      <div class="certificate-card" {{ block.shopify_attributes }}>
        <div class="certificates-img">
        {% if block.settings.certificate_image %}
          <img 
            src="{{ block.settings.certificate_image | img_url:'master' }}" 
            alt="{{ block.settings.certificate_title | escape }}">
        {% endif %}
        </div>
        <div class="certificate-all-content">
        <h3>{{ block.settings.certificate_title }}</h3>
        <div class="ctificte-btn--pulsss">
        <div class="certificate-puls-btn"> 
        <button 
          class="cert-plus" 
          type="button" 
          data-desc="{{ block.settings.certificate_description | escape }}">
          +
        </button>
        </div>
      </div>
      </div>
      </div>
    {% endfor %}
  </div>

  <!-- Popup Modal -->
  <div class="cert-popup" id="cert-popup">
    <div class="cert-popup-content">
      <span class="cert-close">&times;</span>
      <p id="cert-popup-text"></p>
    </div>
  </div>
</section>

<style>

  .certificates-slider .certificate-all-content {
    border: 1px solid #000;
    border-top: 0;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    padding: 40px 30px 30px;
}

.certificates-slider .ctificte-btn--pulsss {
    justify-content: end;
    display: flex;
    margin-top: 18px;
}

.certificates-slider {
     padding: 100px 30px;
    max-width: 1745px;
    margin: 0 auto;
}
.certificates-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50px;
}
.certificates-header h2 {
  font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 40px;
    line-height: 45px;
    margin: 0;
}

.certificates-slider .certificates-arrows button {
    background: transparent;
    border: 0;
    padding: 0;
}

.certificates-slider .certificates-arrows button svg {
    width: 20px;
    height: 20px;
    display: block;
    cursor: pointer;
}

.certificates-slider .certificates-arrows .prev-btn, .certificates-slider .certificates-arrows .next-btn {
    width: 40px;
    height: 40px;
    border: 1px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
}

.certificates-slider .certificates-arrows {
    display: flex;
    gap: 10px;
    cursor: pointer;
}

.certificate-card {
  border-radius: 20px;
  text-align: center;
  margin: 0 10px;
}

.certificate-card .certificates-img {
    background-color: #E1E9E4;
    position: relative;
    padding-bottom: 316px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}
.certificate-card img {
     max-width: 277px;
    width: 100%;
    height: 100%;
    margin: 0 auto;
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    object-fit: contain;
}
.certificate-card h3 {
    margin: 0;
    font-family: Frutiger Neue LT W1G;
    font-weight: 500;
    font-size: 24px;
    line-height: 30px;
    text-align: left;
    min-height: 65px;
}

.certificates-slider .certificate-puls-btn button.cert-plus {
    background: 0;
    border: 0;
    font-size: 26px;
    padding: 0;
    cursor: pointer;
}

.certificates-slider .certificate-puls-btn {
    width: 30px;
    height: 30px;
    border: 1px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
}

.cert-popup {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0; top: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  justify-content: center;
  align-items: center;
}
.cert-popup-content {
  background: #fff;
  padding: 25px;
  border-radius: 10px;
  max-width: 500px;
  width: 90%;
  text-align: left;
  position: relative;
}
.cert-close {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 20px;
  cursor: pointer;
}
@media(max-width:1900px){
  .certificates-slider {
    padding: 50px 30px;
  }
  .certificates-header h2 {
    font-size: 28px;
    line-height: normal;
  }
  .certificates-header {
    margin-bottom: 30px;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function(){
  // Init Slick
  $('.certificates-carousel').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    infinite: false,
    prevArrow: $('.cert-prev'),
    nextArrow: $('.cert-next'),
    responsive: [
      { breakpoint: 1200, settings: { slidesToShow: 3 }},
      { breakpoint: 768, settings: { slidesToShow: 2 }},
      { breakpoint: 480, settings: { slidesToShow: 1 }}
    ]
  });

  // Popup logic
  const popup = document.getElementById("cert-popup");
  const popupText = document.getElementById("cert-popup-text");
  const closeBtn = document.querySelector(".cert-close");

  document.querySelectorAll(".cert-plus").forEach(btn => {
    btn.addEventListener("click", function(){
      popup.style.display = "flex";
      popupText.textContent = this.getAttribute("data-desc");
    });
  });

  closeBtn.addEventListener("click", () => popup.style.display = "none");
  window.addEventListener("click", e => { if(e.target == popup) popup.style.display = "none"; });
});
</script>

{% schema %}
{
  "name": "Certificates Slider",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "International product certificates"
    }
  ],
  "blocks": [
    {
      "type": "certificate",
      "name": "Certificate",
      "settings": [
        {
          "type": "image_picker",
          "id": "certificate_image",
          "label": "Certificate Image"
        },
        {
          "type": "text",
          "id": "certificate_title",
          "label": "Certificate Title",
          "default": "Certificate name"
        },
        {
          "type": "textarea",
          "id": "certificate_description",
          "label": "Certificate Description",
          "default": "Details about the certificate."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Certificates Slider"
    }
  ]
}
{% endschema %}
