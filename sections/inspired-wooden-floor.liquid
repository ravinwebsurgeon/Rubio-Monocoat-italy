{% assign meta_products = collection.metafields.custom.inspired_wooden_products.value %}
{% assign meta_images = collection.metafields.custom.inspired_wooden_images.value %}
{% assign meta_heading = collection.metafields.custom.inspired_wooden_heading.value %}

{% assign sub_images = collection.metafields.custom.inspired_wooden_subimage.value %}
{% assign sub_texts = collection.metafields.custom.inspired_wooden_subtext.value %}
{% assign btn_texts = collection.metafields.custom.inspired_wooden_btn_text.value %}
{% assign btn_links = collection.metafields.custom.inspired_wooden_btn_link.value %}


{% if meta_images != blank and meta_products != blank %}
<section class="asdf inspired-collage" data-show="{{ meta_products | json }}">
  <div class="container">
    <div class="collage-header">
       {% comment %} <h2>{{ section.settings.headi/ng }}</h2>  {% endcomment %}
      <h2>{{ meta_heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
    <div class="collage-grid">
      {% for image in meta_images %}
        {% assign current_image = sub_images[forloop.index0] %}
        {%  assign has_valid_image = true %}
       <p class="something" style="display:none;"><img src="{{ current_image | img_url}}"></p>
          {% if current_image contains 'no-image' %}
            {% assign has_valid_image = false %}
          {% endif %}

        {% assign handle = meta_products[forloop.index0] %}
        {% assign product = all_products[handle] %}
        {% if product %}
          <div class="collage-item {% if forloop.first %}large{% else %}small{% endif %}"  data-product = {{ product }}
               style="background-image: url('{{ image | img_url: 'master' }}')">
              {% if sub_texts[forloop.index0] != blank or btn_texts[forloop.index0] !=blank or sub_images[forloop.index0] != blank %}
              <a href="javascript:void(0);" 
               class="product-overlay-btn" 
               {% for pro in meta_products%} 
                  {% if forloop.index == forloop.parentloop.index %}  
                    data-product-handle="{{ pro.handle }}"
                    data-product-desc="{{ pro.metafields.custom.collectionproduct_subtitle.value }}" 
                  {% endif %} 
                {% endfor %}
                 >
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="20" cy="20" r="20" fill="black" fill-opacity="0.5"/>
                  <circle cx="20" cy="20" r="9" fill="white"/>
                </svg>
              </a>
            {% endif %}
            {% if btn_texts !=blank or sub_texts !=blank or sub_images[forloop.index0] != blank %}
            <div class="hotspot-popup">
              <span class="close-hotspot">&times;</span>
              <div class="hotspot-content">
                  {% for img in sub_images %}
                    {% if forloop.index0 == forloop.parentloop.index0 %}
                      <img  src="{{ img | img_url: '300px' }}"/>
                    {% endif %}
                  {% endfor %}
                <h3>{{ sub_texts[forloop.index0] }}</h3>
                 {% if btn_texts[forloop.index0] %}
                    <a href="{{ btn_links[forloop.index0] }}">
                      <button type="submit" class="ajax_add_cart">{{ btn_texts[forloop.index0] }}</button>
                    </a>
                {% endif %}
              </div>
            </div>
          {% endif %}

          </div>
        {% endif %}
      {% endfor %}


    </div>
  </div>  
</section>
{% endif %}
<style>
.inspired-collage{
  padding:100px 0 50px;
}
.inspired-collage .container{ 
  max-width: 1760px; 
  margin: 0 auto; 
  padding: 0 30px;
  font-family: Frutiger Neue LT W1G;
}
.collage-header h2 { 
  
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 36px;
    line-height: normal;
    margin: 0 0 10px;
}
.collage-header p { 
  font-size: 24px; 
  color: rgba(0,0,0,0.7); 
  line-height: normal;
}
.collage-grid {
  display: grid;
  grid-template-columns: 1.3fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 16px;
  margin:50px 0 0;
}
.collage-item { 
  position: relative; 
  border-radius: 12px; 
  cursor: pointer; 
  background-size: cover; 
  background-position: center; 
  min-height: 400px;
}
.collage-item.large {
  grid-column: 1 / 2;
  grid-row: 1 / 3;
}
.collage-item.small {
}
.product-overlay-btn { 
   position: absolute; 
   top: 10px; 
   left: 10px; 
   z-index: 1; 
   cursor:pointer;
}

.hotspot-popup {
  display: none;
  position: absolute;
  top: 50px; 
  left: 0;
  width: 240px;
  background: #fff;
  border-radius: 20px;
  padding: 30px 20px;
  z-index: 2;
  box-sizing: border-box;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.hotspot-popup .close-hotspot {
  position: absolute;
  top: -5px;
  right: -5px;
  background: #183029;
  font-size: 16px;
  cursor: pointer;
  z-index: 2;
  color: #fff;
  width: 24px;
  height: 24px;
  display: flex  ;
  align-items: center;
  justify-content: center;
  border-radius: 50px;
  line-height: 24px;
  font-family: arial;
  padding: 0;
  border: none;
}
.hotspot-popup form {
    text-align: center;
}
.hotspot-popup img {
  width: 160px;
  height: 160px;
  border-radius:10px;
  margin:0 auto;
  max-width:100%;
  display:block;
  object-fit:contain;
}
.hotspot-popup h3 {
  margin: 15px 0 5px;
  font-size: 16px;
  font-weight: 500;
  font-family: Frutiger Neue LT W1G;
  color:#000;
  line-height: normal;
}
.hotspot-popup p {
  font-size: 12px;
  margin-bottom: 0;
  font-family: Frutiger Neue LT W1G;
  color:rgba(0,0,0,0.7);
  line-height: normal;
}
.hotspot-popup button {
  color: #000;
  border: none;
  padding: 10.5px 32px;
  border-radius: 33px;
  font-size: 14px;
  cursor: pointer;
  font-family: Frutiger Neue LT W1G;
  width: auto;
  font-weight: bold;
  background-color:#f7c600;
  display: inline-flex;
  margin: 20px auto 0;
}
.collage-item.large .product-overlay-btn {
    left: 50%;
    top: 50%;
    width: 40px;
    height: 40px;
    transform: translate(-50%, -50%);    
}
.product-overlay-btn svg {
    display: block;
}
.collage-item:nth-child(2) .product-overlay-btn {
    top: 68px;
    left: 53%;
}
.collage-item:nth-child(3) .product-overlay-btn {
