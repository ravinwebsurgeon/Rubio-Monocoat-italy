{% comment %} <div class="faq-main-container">
  <div class="custom-faq-wrapper">
    <div class="custom-faq-inner">

      <!-- Left Image -->
      <div class="cust-image-faq">
        <div class="custom-faq-image">
          {% assign faq_images = product.metafields.custom.how_to_use_faq_image.value %}
          {% if faq_images and faq_images.size > 0 %}
            <img id="faq-left-image" src="{{ faq_images[0] | img_url: '800x' }}" alt="How to use" loading="lazy">
          {% endif %}
        </div>
      </div>

      <!-- Right FAQ Accordion -->
      <div class="cust-faq-content" id="how-to-apply">
        <div class="custom-faq-section">
