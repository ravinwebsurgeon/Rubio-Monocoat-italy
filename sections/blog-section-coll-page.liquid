{% stylesheet %}
.blog-slider-section {
  padding: 60px 0;
  font-family: Frutiger Neue LT W1G;
}
.blog-slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50px;
}
.blog-slider-header h2 {
  font-family: Frutiger Neue LT W1G;
  font-weight: 700;
  font-size: 40px;
  line-height: 45px;
  margin: 0;
}
.blog-slider-arrows {
  display: flex;
  gap: 10px;
}
.blog-slider-arrows button {
  background: transparent;
  border: 1px solid #000;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.blog-slider-arrows button svg {
  width: 18px;
  height: 18px;
}

.blog-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  margin: 0 10px;
  width: 825px;
  height: 600px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.blog-card-image {
  width: 100%;
  height: 400px;
  overflow: hidden;
}
.blog-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.blog-card-content {
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.blog-card-content h3 {
  font-size: 20px;
  font-weight: 600;
  margin: 0;
  flex: 1;
}
.blog-card-arrow {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15px;
}
.blog-card-arrow svg {
  width: 18px;
  height: 18px;
}

@media(max-width: 1024px){
  .blog-card { width: 100%; height: auto; }
  .blog-card-image { height: 300px; }
}
{% endstylesheet %}

<section class="blog-slider-section">
  <div> 
    <div class="blog-slider-header">
      <h2>{{ section.settings.heading }}</h2>
      <div class="blog-slider-arrows"></div>
    </div>
    <div class="blog-slider">
      {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit %}
        <div class="blog-card">
          <div class="blog-card-image">
            {% if article.image %}
              <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}" width="" height="">
            {% endif %}
          </div>
          <div class="blog-card-content">
            <h3>{{ article.title }}</h3>
            <a href="{{ article.url }}" class="blog-card-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>  
</section>

{% javascript %}
document.addEventListener("DOMContentLoaded", function() {
  if ($('.blog-slider').length) {
    $('.blog-slider').slick({
      slidesToShow: 2,
      slidesToScroll: 1,
      infinite: false,
      arrows: true,
      appendArrows: $('.blog-slider-arrows'),
      prevArrow: `<button type="button" class="slick-prev">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slick-next">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>`,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 1 } }
      ]
    });
  }
});
{% endjavascript %}

{% schema %}
{
  "name": "Blog Slider",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Latest from the blog" },
    { "type": "blog", "id": "blog", "label": "Select Blog" },
    { "type": "range", "id": "post_limit", "label": "Number of posts", "min": 2, "max": 12, "step": 1, "default": 6 }
  ],
  "presets": [
    { "name": "Blog Slider", "category": "Blog" }
  ]
}
{% endschema %}
