
<section class="surface-slider">
  <div class="surface-slider-container">
    <div class="slider-header">
      <h2>{{ section.settings.main_heading }}</h2>
      <div class="custom-arrows"></div>
    </div>

    <div class="surface-slider-inner">
      {% for block in section.blocks %}
        <div class="slide-item">
          <a href="{{ block.settings.link }}" class="slide-card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '600x400' }}" alt="{{ block.settings.title }}">
            {% endif %}
            <p class="slide-title">{{ block.settings.title }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
a.slide-card {
    text-decoration: none;
}
.surface-slider {
  width: 100%;
  padding: 40px 0;
}

.surface-slider-container {
  max-width: 1760px;
  margin: 0 auto; 
  padding: 0 30px;
}

.slider-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 50px;
}

.surface-slider-container .slider-header h2 {
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 40px;
    line-height: 45px;
    margin: 0;
}

.custom-arrows {
  display: flex;
  gap: 8px;
}

.custom-arrows button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #ccc;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.custom-arrows button svg {
  width: 18px;
  height: 18px;
}

.surface-slider-inner .slide-item {
  padding: 10px;
}

.slide-card {
  display: block;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  text-align: center;
  transition: transform 0.3s ease;
  border: 1px solid #eee;
}

.slide-card img {
  height: 600px;
  object-fit: cover;
  margin: 0 auto; 
  width: 100%;
}


.slide-card:hover {
  transform: translateY(-5px);
}

.slide-title {
    font-size: 40px;
    font-weight: 400;
    padding: 0;
    margin: 15px 0 25px;
    color: #000;
    letter-spacing: normal;
    line-height: normal;
    font-family: Frutiger Neue LT W1G;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  if ($('.surface-slider-inner').length) {
    $('.surface-slider-inner').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      infinite: false,
      arrows: true,
      appendArrows: $('.custom-arrows'),
      prevArrow: `<button type="button" class="slick-prev">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slick-next">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>`,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 768, settings: { slidesToShow: 1 } }
      ]
    });
  }
});
</script>

{% schema %}
{
  "name": "Other Surface Slider",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Oiling other surfaces?"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Furniture"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Other Surface Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

