<section class="surface-slider">
  <div class="slider-header">
    <h2>{{ section.settings.main_heading }}</h2>
  </div>

  <div class="surface-slider-inner">
    {% for block in section.blocks %}
      <div class="slide-item">
        <a href="{{ block.settings.link }}">
          <div class="slide-card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title }}">
            {% endif %}
            <p class="slide-title">{{ block.settings.title }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.surface-slider {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}
.slider-header h2 {
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 20px;
}
.surface-slider-inner {
  display: flex;
}
.slide-item {
  padding: 10px;
}
.slide-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  text-align: center;
  transition: transform 0.3s ease;
}
.slide-card img {
  width: 100%;
  border-bottom: 1px solid #eee;
  border-radius: 12px 12px 0 0;
}
.slide-card:hover {
  transform: translateY(-5px);
}
.slide-title {
  font-size: 16px;
  font-weight: 600;
  padding: 12px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  $('.surface-slider-inner').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows: true,
    dots: false,
    infinite: true,
    responsive: [
      { breakpoint: 1024, settings: { slidesToShow: 2 } },
      { breakpoint: 768, settings: { slidesToShow: 1 } }
    ]
  });
});
</script>

{% schema %}
{
  "name": "Other Surfaces Slider",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Oiling other surfaces?"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Furniture"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Other Surfaces Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
