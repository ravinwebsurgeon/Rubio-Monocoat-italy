{% assign heading = collection.metafields.custom.surface_slider_main_heading.value %}
<section class="surface-slider">
  <div class="surface-slider-container">
    <div class="slider-header">
      <h2>{{ heading }}</h2>
      <div class="custom-arrows"></div>
    </div>

    {% assign links = collection.metafields.custom.faq_lnk.value %}
    {% assign images = collection.metafields.custom.faq_immag.value %}
    {% assign texts = collection.metafields.custom.faq_textss.value %}

    <div class="surface-slider-inner">
      {% if links and images and texts %}
        {% for image in images %}
          {% assign link = links[forloop.index0] %}
          {% assign text = texts[forloop.index0] %}

          <div class="slide-item">
            <a href="{{ link }}" class="slide-card">
              {% if image %}
                <img src="{{ image | img_url: '600x400' }}" alt="{{ text }}" width="" height="">
              {% endif %}
              {% if text %}
                <p class="slide-title">{{ text }}</p>
              {% endif %}
            </a>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
a.slide-card {
    text-decoration: none;
}
.surface-slider {
  width: 100%;
  padding: 40px 0;
}

.surface-slider-container {
  max-width: 1760px;
  margin: 0 auto; 
  padding: 0 30px;
}

.slider-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 50px;
}

.surface-slider-container .slider-header h2 {
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 36px;
    line-height: normal;
    margin: 0;
}

.custom-arrows {
  display: flex;
  gap: 8px;
}

.custom-arrows button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #183029;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.custom-arrows button svg {
  width: 18px;
  height: 18px;
  color: #183029;
}

.surface-slider-inner .slide-item {
  padding: 10px;
}

.slide-card {
  display: block;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  text-align: center;
  transition: transform 0.3s ease;
  border: 1px solid rgb(0 0 0 / 30%);
}

.slide-card img {
  aspect-ratio: 1;
  object-fit: cover;
  margin: 0 auto; 
  width: 100%;
}


.slide-card:hover {
  transform: translateY(-5px);
}

.slide-title {
    font-size: 28px;
    font-weight: 400;
    padding: 0;
    margin: 15px 0;
    color: #000;
    letter-spacing: normal;
    line-height: normal;
    font-family: Frutiger Neue LT W1G;
}


@media(max-width:991px){
  .surface-slider-container .slider-header h2 {
      font-size: 24px;
  }
  .slider-header {
    margin-bottom: 30px;
  }
  .slide-title {
    font-size: 18px;
  }
}
@media(max-width:767px){
  .surface-slider-container {
      padding: 0 20px;
  }
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  if ($('.surface-slider-inner').length) {
    $('.surface-slider-inner').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      infinite: false,
      arrows: true,
      appendArrows: $('.custom-arrows'),
      prevArrow: `<button type="button" class="slick-prev">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slick-next">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>`,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 768, settings: { slidesToShow: 1 } }
      ]
    });
  }
});
</script>

{% schema %}
{
  "name": "Other Surface Slider",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Oiling other surfaces?"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Furniture"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Other Surface Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

