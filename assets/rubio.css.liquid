body:not(.templateindex) header.header img.another-pages-logo {
    width: auto !important;
    height: 48px !important;
    object-fit: contain;
}

body:not(.templateindex) .header .header__heading-logo-wrapper {
    position: relative;
}

body:not(.templateindex) header .header__heading-logo-wrapper img {
    display: none;
}

body:not(.templateindex) header.header .another-logo img {
    display: block;
}

body:not(.templateindex) .shopify-section-header-sticky.scrolled-past-header .containner_header .header__heading-logo-wrapper img {
    display: block !important;
}

body:not(.templateindex) .shopify-section-header-sticky.scrolled-past-header .containner_header .another-logo {
    display: none;
}

.templateindex header.header .another-logo {
    display: none;
}

.page-width.product-section {
    max-width: 1745px;
    padding: 0 30px;
    margin: 0 auto;
}

.thumbnail-list.slider {
    display: grid !important;
    grid-template-columns: 1fr !important;
        padding: 0 !important;
}
.product .slider-mobile-gutter {
    width: 70% ;
}
.product .thumbnail-slider.slider-mobile-gutter{
    width: 30%;
    position: sticky;
}

.product .product.product--large .product__media-wrapper .product__column-sticky {
    width: 100%;
   display: flex !important;
    position: inherit;
    gap: 20px;
}

.product-media-container.constrain-height.media-fit-contain {
    margin: 0;
    border: 0;
    width: 100% !important;
    max-width: 100%;
}

.thumbnail-list.slider--tablet-up .thumbnail-list__item.slider__slide .thumbnail[aria-current] {
    box-shadow: none;
    border: 0;
    border-radius: 20px;
}

.thumbnail-list.slider--tablet-up .thumbnail-list__item.slider__slide .thumbnail {
    border: 0;
}

.product-section .product__media-wrapper .product__media-list.grid.grid--peek {
    position: sticky;
    top: 30px;
    height: auto;
}

.slider.slider--mobile .slider__slide {
    padding: 0 !important;
}

.product__media.media.media--transparent {
    border: 0;
}

.product__media.media.media--transparent img {
    width: 100%;
    height:100%;
    min-height: 100%;
    border-radius: 20px;
    object-fit: cover;
}

.product__media-wrapper .product__column-sticky {
    width: 100%;
    display: flex !important;
    position: inherit;
    gap: 20px;
}

.product-section .thumbnail-list.slider--tablet-up .thumbnail-list__item.slider__slide {
    width: 100% !important;
    max-width: 100% !important;
}

.product-section .grid__item.product__media-wrapper {
    max-width: 60% !important;
    width: 60% !important;
}

.product-section .product__info-wrapper.grid__item.scroll-trigger.animate--slide-in {
    width: 40%;
    max-width: 40%;
}

.product-section .product .product-tag-img img {
    width: 20px;
    height: 20px;
    display: block;
}

.product-section .product .product-tag span {
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 20px;
    line-height: 100%;
    text-align: center;
    color: #fff;
}

.product-section .product .product-tag {
    padding: 20px 24.6px;
    border-radius: 50px;
    gap: 10px;
}
.product-section .product-title-price {
    margin: 10px 0 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.product-section .product-title-price .product__title.sdfds {
    margin: 0;
}

.product-section .product .price .badge, .product .price__container {
    margin: 0;
}

.product-section .product__title.sdfds h1 {
    font-family: Frutiger Neue LT W1G;
    font-weight: 700;
    font-size: 36px;
    line-height: 60px;
}

.product-section .price .price__regular {
    font-family: Frutiger Neue LT W1G;
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    text-align: right;
    color: #000;
}