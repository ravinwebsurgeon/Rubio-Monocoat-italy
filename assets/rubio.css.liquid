.page-width.product-section {
    max-width: 1745px;
    padding: 0 30px;
    margin: 0 auto;
}

.thumbnail-list.slider {
    display: grid !important;
    grid-template-columns: 1fr !important;
        padding: 0 !important;
}
.product .slider-mobile-gutter {
    width: 70% ;
}
.product .thumbnail-slider.slider-mobile-gutter{
    width: 30%;
    position: sticky;
}

.product .product.product--large .product__media-wrapper .product__column-sticky {
    width: 100%;
   display: flex !important;
    position: inherit;
    gap: 20px;
}

.product-media-container.constrain-height.media-fit-contain {
    margin: 0;
    border: 0;
    width: 100% !important;
    max-width: 100%;
}

.slider.slider--mobile .slider__slide {
    padding: 0;
}

.product__media.media.media--transparent {
    border: 0;
    min-height: 100vh;
}

.product__media.media.media--transparent img {
    width: 100%;
    height:100%;
    min-height: 100%;
    border-radius: 20px;
    object-fit: cover;
}

.product__media-wrapper .product__column-sticky {
    width: 100%;
    display: flex !important;
    position: inherit;
    gap: 20px;
}

.thumbnail-list.slider--tablet-up .thumbnail-list__item.slider__slide {
    width: 100% !important;
    max-width: 100% !important;
}