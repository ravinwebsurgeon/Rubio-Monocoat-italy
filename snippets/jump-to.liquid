<div class="jump-links-section">
  <div class="jump-links-grid">
    <h3 class="jump-links-heading">Jump to...</h3>
    {% if product_info_sec != blank %}
      <a href="#product-info" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-product.svg' | asset_url }}" alt="Product info" class="jump-link-icon">
        </div>
        <span class="jump-link-text">Product info</span>
      </a>
    {% endif %}
    {% if how_to_apply_section != blank %}
      <a href="#how-to-apply" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-apply.svg' | asset_url }}" alt="How to apply" class="jump-link-icon">
        </div>
        <span class="jump-link-text">How to apply</span>
      </a>
    {% endif %}
    {%if technical_info_section != blank %}
      <a href="#technical-info" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-tech.svg' | asset_url }}" alt="Technical info" class="jump-link-icon">
        </div>
        <span class="jump-link-text">Technical info</span>
      </a>
    {% endif %}
    {% if inspiration_section != block %}
      <a href="#inspiration" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-inspiration.svg' | asset_url }}" alt="Inspiration" class="jump-link-icon">
        </div>
        <span class="jump-link-text">Inspiration</span>
      </a>
    {% endif %}
    {% if faq_section != blank %}
      <a href="#faqs" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-faq.svg' | asset_url }}" alt="FAQ’s" class="jump-link-icon">
        </div>
        <span class="jump-link-text">FAQ’s</span>
      </a>
    {% endif %}
    {% if review_section != blank %}
      <a href="#reviews" class="jump-link-item">
        <div class="jump-to-icon">
        <img src="{{ 'icon-reviews.svg' | asset_url }}" alt="Reviews" class="jump-link-icon">
        </div>
        <span class="jump-link-text">Reviews</span>
      </a>
    {% endif %}
  </div>
</div>
{% style %}
.jump-links-section {
  margin: 20px 0;
}
.jump-links-heading {
  font-size: 1.2rem;
  margin-bottom: 15px;
}
.jump-links-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  align-items:center;
}
.jump-link-item {
  display: flex;
  align-items: center;
  gap: 8px;
  border: 1px solid #dcdcdc;
  border-radius: 9999px;
  padding: 8px 14px;
  text-decoration: none;
  font-weight: 600;
  color: #222;
  transition: all 0.2s ease;
}
.jump-link-item:hover {
  background: #f5f5f5;
}
.jump-link-icon {
  width: 20px;
  height: 20px;
}

@media(min-width:992px){
  .product__info-wrapper .jump-links-section {
    display: none;
  }
}
@media(max-width:991px){
  .product__media-wrapper .jump-links-section {
    display: none;
  }
}


{% endstyle %}