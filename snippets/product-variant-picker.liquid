<script>
(function () {
  // Helper to get a readable name from a swatch element or an input
  function getSwatchName(el) {
    if (!el) return null;
    // If element is an <input>, prefer value or data attributes
    if (el.matches && el.matches('input[type="radio"], input[type="checkbox"]')) {
      return el.value || el.getAttribute('data-value') || el.getAttribute('aria-label') || null;
    }
    // If element is a label or wrapper, check dataset or attributes
    if (el.dataset && el.dataset.value) return el.dataset.value;
    if (el.dataset && el.dataset.swatch) return el.dataset.swatch;
    if (el.getAttribute && el.getAttribute('aria-label')) return el.getAttribute('aria-label');
    if (el.getAttribute && el.getAttribute('title')) return el.getAttribute('title');
    // fallback to trimmed textContent (may include check icons etc.)
    const t = el.textContent ? el.textContent.trim() : '';
    return t || null;
  }

  function initSwatchHoverForFieldset(fieldset) {
    if (!fieldset) return;
    const selectedValueEl = fieldset.querySelector('[data-selected-value]');
    if (!selectedValueEl) return;

    // store currently selected text (kept in sync with 'change' events and variant:change)
    let originalText = selectedValueEl.textContent.trim();

    // pointerover/out delegation so we don't need to attach to every label individually
    fieldset.addEventListener('pointerover', function (e) {
      const target = e.target;
      // find the closest swatch element (label, button, .swatch__item, input, etc.)
      const swatchEl = target.closest('label, button, .swatch__item, [data-swatch-value], input[type="radio"], input[type="checkbox"]');
      if (!swatchEl || !fieldset.contains(swatchEl)) return;
      // if it's a wrapper, try to find an input inside
      const input = swatchEl.matches('input[type="radio"], input[type="checkbox"]') ? swatchEl : swatchEl.querySelector('input[type="radio"], input[type="checkbox"]');
      const name = getSwatchName(input) || getSwatchName(swatchEl);
      if (name) selectedValueEl.textContent = name;
    });

    fieldset.addEventListener('pointerout', function (e) {
      // If pointer moved to another swatch inside same fieldset, don't revert
      const related = e.relatedTarget;
      if (related && related.closest && related.closest('.product-form__input--swatch') === fieldset) {
        const stillInSwatch = Boolean(related.closest('label, button, .swatch__item, [data-swatch-value], input[type="radio"], input[type="checkbox"]'));
        if (stillInSwatch) return;
      }
      // revert
      selectedValueEl.textContent = originalText;
    });

    // when user actually selects a swatch, update the originalText permanently
    fieldset.addEventListener('change', function (e) {
      const input = e.target.closest && e.target.closest('input[type="radio"], input[type="checkbox"]') ? e.target.closest('input[type="radio"], input[type="checkbox"]') : (e.target.matches && e.target.matches('input[type="radio"], input[type="checkbox"]') ? e.target : null);
      if (!input) return;
      originalText = input.value || input.getAttribute('data-value') || getSwatchName(input) || originalText;
      selectedValueEl.textContent = originalText;
    });

    // Shopify's variant:change may update the selected value through other scripts —
    // keep originalText synced when that happens
    document.addEventListener('variant:change', function () {
      // attempt to read the current displayed text (in case Shopify updated it)
      originalText = selectedValueEl.textContent.trim();
    });
  }

  // initialize existing fieldsets
  function initAll() {
    document.querySelectorAll('.product-form__input--swatch').forEach(fs => {
      // avoid double-initialization by tagging
      if (!fs.__swatchHoverInit) {
        initSwatchHoverForFieldset(fs);
        fs.__swatchHoverInit = true;
      }
    });
  }

  // Run initial setup
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAll);
  } else {
    initAll();
  }

  // Observe DOM for dynamically added swatch groups (AJAX themes / sections)
  const observer = new MutationObserver(muts => {
    let found = false;
    for (const m of muts) {
      for (const n of m.addedNodes) {
        if (!(n instanceof HTMLElement)) continue;
        if (n.matches && n.matches('.product-form__input--swatch')) { found = true; break; }
        if (n.querySelector && n.querySelector('.product-form__input--swatch')) { found = true; break; }
      }
      if (found) break;
    }
    if (found) initAll();
  });
  observer.observe(document.body, { childList: true, subtree: true });
})();
</script>
