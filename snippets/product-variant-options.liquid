{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to dispay


  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type
  %}
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign swatch_focal_point = null
    if value.swatch.image
      assign image_url = value.swatch.image | image_url: width: 50
      assign swatch_value = 'url(' | append: image_url | append: ')'
      assign swatch_focal_point = value.swatch.image.presentation.focal_point
    elsif value.swatch.color
      assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
    else
      assign swatch_value = null
    endif

    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  {%- capture label_unavailable -%}
    <span class="visually-hidden label-unavailable">
      {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
    </span>
  {%- endcapture -%}

  {%- if picker_type == 'swatch' -%}
    {%- capture help_text -%}
      <span class="visually-hidden">{{ value | escape }}</span>
      {{ label_unavailable }}
    {%- endcapture -%}
    {%
      render 'swatch-input',
      id: input_id,
      name: input_name,
      value: value | escape,
      swatch: value.swatch,
      product_form_id: product_form_id,
      checked: value.selected,
      visually_disabled: option_disabled,
      shape: block.settings.swatch_shape,
      help_text: help_text,
      additional_props: input_dataset,
      swatchIndex:forloop.index0
    %}
  {%- elsif picker_type == 'button' -%}
    {% comment %}
      Default button picker, modified for Size option
    {% endcomment %}

    {% assign current_variant = nil %}
    {% for variant in product.variants %}
      {% if variant.options contains value %}
        {% assign current_variant = variant %}
        {% break %}
      {% endif %}
    {% endfor %}

    <input
      type="radio"
      id="{{ input_id }}"
      class="swatch-input__input  {% if option_disabled %}disabled{% endif %}" 
      name="{{ input_name | escape }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if value.selected %}checked{% endif %}
      {{ input_dataset }}
    >
    <label for="{{ input_id }}">
      <div class="variant-label-text">
        {{ value }}
        {{ label_unavailable }}
      </div>

      {% comment %} {% if option.name == 'Size' and current_variant %} {% endcomment %}
      {% comment %} {% if parent_loop_index  == 2  and current_variant %} {% endcomment %}
       {% assign size_names = "Size,Formato,St√∏rrelse" | split: "," %}
       {% assign is_size_option = false %}
        {% for name in size_names %}
          {% if option.name == name %}
            {% assign is_size_option = true %} 
            {% break %} 
          {% endif %}
        {% endfor %}

      {% if is_size_option and current_variant %}
        <div class="custom_price_value" style="display:flex;">
           {% assign country_iso = localization.country.iso_code | downcase %}
           {% assign custom_index = '' %}
          {% if country_iso == 'it' and user_lang == 'it' %}{% assign custom_index = 'it' %}{% endif %} {% comment %}Italy and Italian {% endcomment %}
            {% if country_iso == 'dk' and user_lang == 'da' %}{% assign custom_index = 'dk' %}{% endif %} {% comment %}Denmark and Danish {%endcomment %}
            {% if country_iso == 'no' and user_lang == 'nb' %}{% assign custom_index = 'no' %}{% endif %} {% comment %}Norway and Norwegian {%endcomment %}
            {% if country_iso == 'se' and user_lang == 'se' %}{% assign custom_index = 'se' %}{% endif %} {% comment %}Sweden and Swedish {%endcomment %}
            {% if country_iso == 'nl' and user_lang == 'nl' %}{% assign custom_index = 'nl' %}{% endif %} {% comment %}NETHERLANDS and Dutch {%endcomment %}
            {% if country_iso == 'fr' and user_lang == 'fr' %}{% assign custom_index = 'fr' %}{% endif %} {% comment %}France and French {%endcomment %}
            {% if country_iso == 'be' and user_lang == 'nl' %}{% assign custom_index = 'be-nl' %}{% endif %} {% comment %}Beligum and Dutch {%endcomment %}
            {% if country_iso == 'be' and user_lang == 'fr' %}{% assign custom_index = 'be-fr' %}{% endif %} {% comment %}Beligum and French {%endcomment %}
            {% if country_iso == 'de' and user_lang == 'de' %}{% assign custom_index = 'de' %}{% endif %} {% comment %}Germany and German {%endcomment %}
            {% if country_iso == 'at' and user_lang == 'de' %}{% assign custom_index = 'at-de' %}{% endif %} {% comment %}Austria and German {%endcomment %}
            {% if country_iso == 'fi' and user_lang == 'fi' %}{% assign custom_index = 'fi' %}{% endif %} {% comment %}Finland and Finnish {%endcomment %}
            {% if country_iso == 'ch' and user_lang == 'de' %}{% assign custom_index = 'ch-de' %}{% endif %} {% comment %}Switzerland and German {%endcomment %}
            {% if country_iso == 'ch' and user_lang == 'fr' %}{% assign custom_index = 'ch-fr' %}{% endif %} {% comment %}Switzerland and French {%endcomment %}
            {% if country_iso == 'ch' and user_lang == 'it' %}{% assign custom_index = 'ch-it' %}{% endif %} {% comment %}Switzerland and Italian {%endcomment %}
             
            {% if custom_index == '' and user_lang == 'en' and country_iso != blank %}
              {% assign custom_index = country_iso %}
              {% assign custom_index = country_iso | append: '-en' %}
            {% endif %}
            <div class="variant-custom-cost__m2 {{ user_lang }}">
                {% assign json_values_list = current_variant.metafields.custom.cost_volume_json.value | parse_json %}
                {% for val in json_values_list %}
                    {{ val[custom_index] }} 
                {% endfor %} 
            </div>
        </div>
      {% endif %}

    </label>
  {%- elsif picker_type == 'dropdown' or picker_type == 'swatch_dropdown' -%}
    <option
      id="{{ input_id }}"
      value="{{ value | escape }}"
      {% if value.selected %}selected="selected"{% endif %}
      {% if swatch_value and picker_type == 'swatch_dropdown' %}
        data-option-swatch-value="{{ swatch_value }}"
        {% if swatch_focal_point %}
          data-option-swatch-focal-point="{{ swatch_focal_point }}"
        {% endif %}
      {% endif %}
      {{ input_dataset }}
    >
      {% if option_disabled -%}
        {{- 'products.product.value_unavailable' | t: option_value: value -}}
      {%- else -%}
        {{- value -}}
      {%- endif %}
    </option>
  {%- endif -%}
  
{%- endfor -%}