<div class="quick__cart__main" data-product-handle = '{{ product.handle }}'>
    <div class="custom__cart__main">
        <div class="cart__product__content">
            <div class="product__image">
               <a href="{{ product.url }}">
                  {% comment %} <img
                    srcset="
                      {%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                      {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                      {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                      {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                      {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                      {{ product.featured_media | image_url }} {{ product.featured_media.width }}w
                    "
                    src="{{ product.featured_media | image_url:small }}"
                    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px,
                          (min-width: 990px) calc((100vw - 130px) / 4),
                          (min-width: 750px) calc((100vw - 120px) / 3),
                          calc((100vw - 35px) / 2)"
                    alt="{{ product.featured_media.alt | escape }}"
                    class="motion-reduce"
                    {% unless lazy_load == false %}loading="lazy"{% endunless %}
                    width="{{ product.featured_media.width }}"
                    height="{{ product.featured_media.height }}"
                  > {% endcomment %}
                    <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.media[1].alt | escape }}" loading="lazy" >
                </a>
            </div>
            <div class="product__title__price">
                <h3 class="product__title">{{ product.title }}</h3>
                <p class="product__price">{{ product.price | money_with_currency }}</p>
                <a href="{{ product.url }}" class="product__GOTO__main">View Details</a>
            </div>
        </div>
        <div class="custom_product_variants">
            {% for option in product.options_with_values %}
              <div class="product_variant_main variant__{{ option.name }}">
                {% assign downcase_name = option.name | downcase %}
                 {% if downcase_name contains 'color' or downcase_name contains 'colour' %}
                  <div class="color-swatch-group product_color_swatchs" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <label
                        class="color-swatch color__swatch__label"
                        title="{{ value }}"
                        style="background-color: {{ value | downcase }};"
                      >
                        <input
                          type="radio"
                          name="option-color-{{ forloop.parentloop.index0 }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="color-swatch-input color__swatch__input"
                          data-value="{{ value | escape }}"
                        >
                        <span class="swatch-checkmark"></span>
                      </label>
                    {% endfor %}
                  </div>
                  {% else %}
                  {% comment %} <select class="option-variant-selector" name="option-variant-selector" id="ProductSelect-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <option 
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %} selected="selected"{% endif %}
                      >
                        {{ value | escape }}
                      </option>
                    {% endfor %}
                  </select> {% endcomment %}
                  <div class="variant-radio-group" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <label class="variant-radio-label">
                        <input
                          type="radio"
                          name="option-{{ option.name | handle }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="variant-radio-input"
                          data-value="{{ value | escape }}"
                        >
                        {{ value }}
                      </label>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
            <input type="hidden" class="variant-selector" id="custom-variant-id" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        </div>
        <div class="action_btns">
            <div class="product_actions_btns">
              {% assign first_variant = product.variants.first %}
              <button class="product_cart_btn {% unless first_variant.available %} disabled-btn {% endunless %}"
                 {% unless first_variant.available %} disabled {% endunless %}
                >Add Into Cart</button>
            </div>
          </div>
    </div>
</div>
<style>
    .quick__cart__main{
    display:none;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 999;
    background:#F2F2F2;
    padding:10px;
}
.quick__cart__main.active__Cart{display:block;top:0;}
</style>
<script>
document.addEventListener('DOMContentLoaded', async function () {

  /* ---------------------------
      1. SELECT ALL RADIO INPUTS
  ---------------------------- */
  const optionRadios = document.querySelectorAll(
    '.color-swatch-input, .variant-radio-input'
  );

  /* ---------------------------
      2. GET PRODUCT HANDLE
  ---------------------------- */
  const cartMain = document.querySelector('.quick__cart__main.active__Cart');
  const productHandle = cartMain ? cartMain.getAttribute('data-product-handle') : null;

  if (!productHandle) {
    console.error("Product handle missing");
    return;
  }

  /* ---------------------------
      3. FETCH PRODUCT JSON
  ---------------------------- */
  const response = await fetch(`/products/${productHandle}.js`);
  const productData = await response.json();
  const variants = productData.variants;


  /* ---------------------------
      4. GET SELECTED OPTIONS
  ---------------------------- */
  function getSelectedOptions() {
    let selected = [];

    // For each option index (1,2,3...)
    const optionGroups = document.querySelectorAll('[data-index^="option"]');

    optionGroups.forEach((group) => {
      const checked = group.querySelector('input[type="radio"]:checked');
      selected.push(checked ? checked.value : null);
    });

    return selected;
  }


  /* ---------------------------
      5. FIND MATCHING VARIANT
  ---------------------------- */
  function findMatchingVariant(selectedOptions) {
    return variants.find((variant) => {
      return variant.options.every((opt, i) => opt === selectedOptions[i]);
    });
  }


  /* ---------------------------
      6. UPDATE HIDDEN VARIANT ID
  ---------------------------- */
  function updateVariantId() {
    const selectedOptions = getSelectedOptions();
    const match = findMatchingVariant(selectedOptions);

    if (match) {
      document.querySelector('#custom-variant-id').value = match.id;
      console.log('Variant Selected:', match.id);
    } else {
      console.log("No matching variant");
    }
  }


  /* ---------------------------
      7. LISTEN FOR ANY RADIO CHANGE
  ---------------------------- */
  optionRadios.forEach((radio) => {
    radio.addEventListener('change', updateVariantId);
  });

  // First update on load
  updateVariantId();

});
</script>