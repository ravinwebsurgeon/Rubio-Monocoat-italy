<div class="quick__cart__main" data-product-handle = '{{ product.handle }}'>
  <script type="application/json" class="quick-product-json" style="display:none;">{{ product | json }}</script>
  <div class="quick__cart__hed">
    <h2>Choose options</h2>
    <button class="quick__cart__close">&times;</button>
  </div>
  
    <div class="custom__cart__main">      
        <div class="cart__product__content">
            <div class="product__image">
               <a href="{{ product.url }}">
                    {% comment %} <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.media[1].alt | escape }}" loading="lazy" > {% endcomment %}
                    {% comment %} {% render 'product-media-gallery' ,product:product %} {% endcomment %}
                  {% for media in product.media %}
                      {% if media.media_type == 'image' %}
                        <img 
                          src="{{ media | image_url: width: 360 }}"
                          {% unless media.alt == product.title %} alt="{{ media.alt | escape }}"{% endunless %}
                          loading="lazy"
                          class="product__image__item first__visit"
                        width="" height="">
                      {% endif %}
                  {% endfor %}
                  </a>
            </div>
            <div class="product__title__price">
                <h3 class="product__title">{{ product.title }}</h3>
                <p class="product__price">{{ product.price | money_with_currency }}</p>
                <a href="{{ product.url }}" class="product__GOTO__main">View Details</a>
            </div>
        </div>
        {% comment %} <div class="custom_product_variants">
            {% for option in product.options_with_values %} 
              <div class="product_variant_main variant__{{ option.name }}">
                <p>
                  <span class="option__name">{{ option.name }}:</span>
                  <span class="option__value custom__{{ option.name }}">  
                    {{ option.selected_value | default: option.values[0] }}
                  </span>
                </p>
                {% assign downcase_name = option.name | downcase %}
                 {% if downcase_name contains 'color' or downcase_name contains 'colour' %}
                  <div class="color-swatch-group product_color_swatchs" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <label
                        class="color-swatch color__swatch__label"
                        title="{{ value }}"
                        style="background-color: {{ value | downcase }};"
                      >
                        <input
                          type="radio"
                          name="{{ option.name }}-{{ option.position }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="swatch-input__input color-swatch-input color__swatch__input"
                          data-value="{{ value | escape }}"
                        >
                        <span class="swatch-checkmark"></span>
                      </label>
                    {% endfor %}
                  </div>
                  {% else %}
                  <div class="variant-radio-group" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <label class="variant-radio-label">
                        <input
                          type="radio"
                          name="{{ option.name }}-{{ option.position }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="swatch-input__input variant-radio-input"
                          data-value="{{ value | escape }}"
                        >
                       <span> {{ value }} </span>
                      </label>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
            <input type="hidden" class="variant-selector" id="custom-variant-id" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        </div> {% endcomment %}
          <div class="custom_product_variants">
            {% for option in product.options_with_values %} 
              <div class="product_variant_main variant__{{ option.name }}">
                
                <p>
                  <span class="option__name">{{ option.name }}:</span>
                  <span class="option__value custom__{{ option.name }}">  
                    {{ option.selected_value | default: option.values[0] }}
                  </span>
                </p>

                {% assign downcase_name = option.name | downcase %}

                {% if downcase_name contains 'color' or downcase_name contains 'colour' %}

                  <div class="color-swatch-group product_color_swatchs" data-index="option{{ forloop.index }}">

                    {% for value in option.values %}

                      {%- comment -%}
                      Build swatch display EXACTLY like swatch.liquid
                      {%- endcomment -%}
                      {% assign swatch_value = '' %}
                      {% assign swatch_focal = '' %}

                      {% if value.swatch %}
                        
                        {% if value.swatch.image %}
                          {% assign img_url = value.swatch.image | image_url: width: 80 %}
                          {% assign swatch_value = 'url(' | append: img_url | append: ')' %}
                          {% assign swatch_focal = value.swatch.image.presentation.focal_point %}
                        
                        {% elsif value.swatch.color %}
                          {% assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')' %}
                        
                        {% endif %}

                      {% endif %}

                      {%- comment -%}
                      Fallback to CSS color name if no swatch exists
                      {%- endcomment -%}
                      {% if swatch_value == '' %}
                        {% assign swatch_value = value | downcase %}
                      {% endif %}

                      <label
                        class="color-swatch color__swatch__label"
                        title="{{ value }}"
                        style="background: {{ swatch_value }};{% if swatch_focal != '' %} background-position: {{ swatch_focal }};{% endif %}"
                      >
                        <input
                          type="radio"
                          name="{{ option.name }}-{{ option.position }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="swatch-input__input color-swatch-input color__swatch__input"
                          data-value="{{ value | escape }}"
                        >
                        <span class="swatch-checkmark"></span>
                      </label>

                    {% endfor %}
                  </div>

                {% else %}

                  <div class="variant-radio-group" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <label class="variant-radio-label">
                        <input
                          type="radio"
                          name="{{ option.name }}-{{ option.position }}"
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}checked{% endif %}
                          class="swatch-input__input variant-radio-input"
                          data-value="{{ value | escape }}"
                        >
                      <span> {{ value }} </span>
                      </label>
                    {% endfor %}
                  </div>

                {% endif %}
              </div>
            {% endfor %}

            <input type="hidden" class="variant-selector" id="custom-variant-id" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          </div>


        <div class="action_btns">
          <div class="product__qty__wrapper">
              {% assign first_variant = product.selected_or_first_available_variant %}
              {% comment %} <label for="quick-cart-qty-{{ product.id }}">Quantity:</label> {% endcomment %}
              <button class="qty__btn qty-minus" type="button">âˆ’</button>
              <input
                type="number"
                id="quick-cart-qty-{{ product.id }}"
                name="quantity"
                min="1"
                max="{{ first_variant.inventory_quantity }}"
                value="1"
                class="quick-cart-qty-input"
              >
              <button class="qty__btn qty-plus" type="button">+</button>
          </div>
            <div class="product_actions_btns">
              {% assign first_variant = product.variants.first %}
              <button class="product_cart_btn ajax__cart {% unless first_variant.available %} disabled-btn {% endunless %}"
                 {% unless first_variant.available %} disabled {% endunless %}
                >Add Into Cart</button>
            </div>
          </div>
    </div>
</div>
<style>
.quick__cart__main {
    position: fixed;
    top: 0;
    right: -500px;
    width: 450px;
    max-width: 95%;
    height: 100vh;
    border-radius: 15px 0 0 15px;
    background: #fff;
    padding: 20px 0;
    z-index: 9999;
    box-shadow: -3px 0 10px rgba(0,0,0,0.1);
    transition: right 0.4s ease;
    overflow:auto;
}

.quick__cart__hed {
    border-bottom: 1px solid #ccc;
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 15px 15px;
}

.quick__cart__hed .quick__cart__close {
    border: none;
    cursor: pointer;
    color: #000;
    padding: 0;
    letter-spacing: 0;
    font-size: 26px;
    line-height: 1;
    background-color: transparent;
    font-weight: 300;
}

.quick__cart__hed h2 {
    margin: 0;
    font-weight: 500;
    font-size: 18px;
    color: #000000;
    font-family: 'Frutiger Neue LT W1G';
    width: calc(100% - 36px);
}
.quick__cart__main.active__Cart {
    right: 0; 
}

.product__image__item{
  display:none;
}
.custom__cart__main .variant-radio-label {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 5px 22px 3px;
    border: 1px solid #396948;
    border-radius: 999px;
    background-color: #ffffff;
    font-family: Frutiger Neue LT W1G;
    font-weight: 500;
    font-size: 13px;
    color: #183029 !important;
    margin: 0 2px 8px;
    cursor: pointer;
    transition: all 0.25s ease;
    text-align: center;
}

.custom__cart__main .variant-radio-label input {
    display: none;
}

.custom__cart__main .variant-radio-label:has(input:checked) {
    background-color: #bfcfc4;
}
.custom__cart__main .variant-radio-label:has(input:checked)::after {
    content: "";
    width: 14px;
    height: 14px;
    background-color: #396948;
    background-image: url(data:image/png;base64,);
    background-size: 6px 6px;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 100%;
    position: absolute;
    top: -5px;
    z-index: 1;
    right: -5px;
}
.quick__cart__main .custom__cart__main {
    padding: 0 15px;
}
.custom__cart__main .color-swatch-group .color__swatch__label {
    border: none;
    width: 20px;
    height: 20px;
    overflow: inherit;
}
.custom__cart__main .color-swatch-group .color-swatch-input:checked + .swatch-checkmark {
    outline: 1px solid #396948;
}
.custom__cart__main .color-swatch-group .swatch-checkmark {
    outline: 1px solid rgb(214, 245, 224);
    outline-offset: 1px;
    display: block;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    border: 1px solid #f2f2f2;
}
.custom__cart__main .color-swatch-input:checked + .swatch-checkmark::after {
    content: "";
    inset: inherit;
    width: 12px;
    height: 12px;
    background-color: #396948;
    background-image: url(data:image/png;base64,);
    background-size: 5px 5px;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 100%;
    position: absolute;
    top: -5px;
    z-index: 1;
    border: none;
    right: -5px;
    box-shadow: none;
}

.custom__cart__main .color-swatch-group {
    gap: 11px;
}
.custom__cart__main .product_variant_main {
    margin: 0 0 25px;
}
.quick__cart__main .custom__cart__main .product_variant_main p {
    font-weight: 500;
    font-size: 14px;
    line-height: normal;
    display: flex;
    gap: 5px;
    width: 100%;
    color: #000000;
    align-items: center;
    font-family: 'Frutiger Neue LT W1G';
    margin: 0 0 10px;
}
.quick__cart__main .action_btns {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
}
.custom__cart__main .cart__product__content {
    display: flex;
    gap: 10px;
    align-items: flex-start;
    margin: 25px 0 25px;
}

.custom__cart__main .cart__product__content .product__image {
    width: 90px;
    height: 90px;
    padding: 5px;
    background-color: #fff;
    border-radius: 10px;
    border: 1px solid #f2f2f2;
}

.custom__cart__main .cart__product__content .product__image a {
    display: block;
    border-radius: 10px;
}

.custom__cart__main .cart__product__content .product__image .product__image__item {
    max-width: 100%;
    border-radius: 10px;
    height: 100%;
    width: 100%;
    object-fit: contain;
}

.custom__cart__main .product__title__price {
    width: calc(100% - 100px);
}

.custom__cart__main .product__title {
    font-weight: 900;
    font-size: 20px;
    line-height: normal;
    font-family: 'Frutiger Neue LT W1G Cn XBlack';
    margin: 0;
    color: #183029;
}

.custom__cart__main .product__price {
    font-family: 'Frutiger Neue LT W1G';
    font-weight: 500;
    font-size: 16px;
    color: #000;
    margin: 10px 0 0;
    line-height: normal;
}

.custom__cart__main .product__GOTO__main {
    color: #183029;
    font-family: 'Frutiger Neue LT W1G';
    font-weight: 300;
    font-size: 12px;
    margin: 0;
    line-height: normal;
}
.custom__cart__main .product_actions_btns button {
    padding: 13px 24px 9px;
}
.quick__cart__main .product__qty__wrapper {
    border: 1px solid #183029;
    border-radius: 50px;
    display: flex;
    min-height: 40px;
}
.quick__cart__main button.qty__btn {
    color: #183029;
    background-color: transparent;
    border: none;
    outline: none;
    width: calc(3.5rem / var(--font-body-scale));
    flex-shrink: 0;
    font-size: 1.8rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
}
.quick__cart__main button.qty__btn.disabled__btn {
  cursor: not-allowed;
  opacity: .5;
}
.quick__cart__main .product__qty__wrapper input {
  text-align: center;
  color: #183029 !important;
  font-size: 16px;
  opacity: 1;
  font-family: Frutiger Neue LT W1G;
  font-weight: 900;
  box-shadow: inherit;
  background-color: inherit;
  border: none;
}    
.quick__cart__main .product__qty__wrapper input:focus{
  outline:none;
  box-shadow:none;
}
</style>
