
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-faq-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-faq-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-faq-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-faq-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-faq-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin-top: 12px;
    line-height: 1.5;
  }

  .ai-faq-list-{{ ai_gen_id }} {
    max-width: {{ block.settings.faq_max_width }}px;
    margin: 0 auto;
  }

  .ai-faq-item-{{ ai_gen_id }} {
    border-bottom: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
  }

  .ai-faq-item-{{ ai_gen_id }}:first-child {
    border-top: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
  }

  .ai-faq-question-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.item_padding }}px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-size: {{ block.settings.question_size }}px;
    color: {{ block.settings.question_color }};
    font-weight: 500;
    line-height: 1.4;
    gap: 20px;
  }

  .ai-faq-question-{{ ai_gen_id }}:hover {
    color: {{ block.settings.question_hover_color }};
  }

  .ai-faq-question-text-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-faq-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .ai-faq-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }

  .ai-faq-answer-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.answer_size }}px;
    color: {{ block.settings.answer_color }};
    line-height: 1.6;
    padding-bottom: {{ block.settings.item_padding }}px;
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 1000px;
  }

  @media screen and (max-width: 749px) {
    .ai-faq-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-faq-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }

    .ai-faq-question-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.question_size }}px * 0.9);
    }

    .ai-faq-answer-content-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.answer_size }}px * 0.9);
    }
  }
{% endstyle %}

<faq-accordion-{{ ai_gen_id }} class="ai-faq-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-faq-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-faq-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-faq-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-faq-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-faq-list-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% liquid
          assign question_key = 'question_' | append: i
          assign answer_key = 'answer_' | append: i
          assign question = block.settings[question_key]
          assign answer = block.settings[answer_key]
        %}

        {% if question != blank and answer != blank %}
          <div class="ai-faq-item-{{ ai_gen_id }} {% if forloop.first and block.settings.first_item_open %}active{% endif %}" data-faq-item>
            <button
              class="ai-faq-question-{{ ai_gen_id }}"
              aria-expanded="{% if forloop.first and block.settings.first_item_open %}true{% else %}false{% endif %}"
              data-faq-button
            >
              <span class="ai-faq-question-text-{{ ai_gen_id }}">{{ question }}</span>
              <span class="ai-faq-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </span>
            </button>
            <div class="ai-faq-answer-{{ ai_gen_id }}" data-faq-answer>
              <div class="ai-faq-answer-content-{{ ai_gen_id }}">{{ answer }}</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</faq-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class FaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('[data-faq-item]');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const button = item.querySelector('[data-faq-button]');
          const answer = item.querySelector('[data-faq-answer]');

          button.addEventListener('click', () => {
            const isActive = item.classList.contains('active');

            if (isActive) {
              item.classList.remove('active');
              button.setAttribute('aria-expanded', 'false');
            } else {
              item.classList.add('active');
              button.setAttribute('aria-expanded', 'true');
            }
          });
        });
      }
    }

    customElements.define('faq-accordion-{{ ai_gen_id }}', FaqAccordion{{ ai_gen_id }});
  })();
</script>

